/* products/pages/index/index.wxss */
page {
  background: #f7f7f7;
  height: 100%;
}


/* 筛选 s */
.screen-box{
  height: 108rpx;
  flex: none;
}
.screen{
  position: fixed;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
}
.screen .item{
  flex: 1;
  background-color: #FF8685;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}
.screen .item.active{
  background-color: #FF3633;
}
.screen .item .words{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #FFFFFF;
}
.screen .item .icon{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 6rpx;
}
.screen .item .icon image{
  width: 12rpx;
  height: 8rpx;
}
.screen .item .icon image.bottom{
  margin-top: 5rpx;
  transform: rotate(180deg);
}
.screen .item .icon .top.trans{
  transform: rotate(180deg);
}
.screen .item .icon .bottom.trans{
  transform: rotate(0deg);
}
.screen .item .bottom-icon{
  width: 60rpx;
  height: 32rpx;
  position: absolute;
  bottom: -34rpx;
  left: 50%;
  transform: translateX(-50%);
  transition: all .3s;
}
.screen .item.active .bottom-icon{
  bottom: 0rpx;
}
/* 筛选 e */

.page-container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.products-container{
  width: 100%;
  flex-grow: 1;
  overflow-y: auto;
  background-color: #fff;
  border-radius: 12rpx 12rpx 0 0;
  position: relative;
  z-index: 1;
  padding-top: 24rpx;
  display: flex;
}

/* 底部按钮 */
.bottom-btn{
  padding: 20rpx 24rpx;
  background-color: #fff;
  box-shadow: 0 0 2rpx 0 #E5E5E5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 199;
  width: 100%;
  box-sizing: border-box;
}
.bottom-btn .info .black{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #332B2B;
}
.bottom-btn .info .red{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FF3633;
}
.bottom-btn .btn{
  background-image: linear-gradient(90deg, #FF3633 0%, #FB2C2A 100%);
  border-radius: 36rpx;
  width: 216rpx;
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
}
.bottom-btn.iphone-x{
  padding-bottom: 68rpx;
}
/* 底部按钮 */

/* 提示 */
.tips{
  background: #FFF0F0;
  width: 702rpx;
  margin: 24rpx auto 24rpx;
  border-radius: 6rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FF3633;
  padding: 8rpx 24rpx;
  box-sizing: border-box;
}
/* 提示 */

/* 占位符 */
.placeholder{
  width: 100%;
  padding-bottom: 200rpx;
}
/* 占位符 */

/* 空列表样式 */
.product-empty {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f7f7;
  height: 100%;
  padding-top: 200rpx;
}

.product-empty image {
  width: 336rpx;
  height: 270rpx;
  margin-top: 230rpx;
}

.product-empty text {
  font-size: 28rpx;
  color: #333333;
  margin-top: 30rpx;
}
/* 空列表样式 */

/* 商品 */
.product{
  display: flex;
  padding-top: 24rpx;
  width: 702rpx;
  margin: 0 auto;
}
.product:first-child{
  padding-top: 0rpx;
}
.product .avatar-container{
  padding: 0 0 24rpx;
}
.product .avatar-container image{
  width: 272rpx;
  height: 272rpx;
  display: flex;
  border-radius: 6rpx;
  margin-right: 24rpx;
}
.product .product-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(230,230,230,1);
  padding: 0 0 8rpx;
  flex: 1;
}
.product .product-info .name-and-badge .name{
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  font-weight: 400;
}
.product .product-info .name-and-badge .pbadges{
  padding-top: 0;
}
.product .product-info .name-and-badge .pbadges .badge-item{
  margin-top: 6rpx;
}
.product .product-info .price-and-btn{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-end;
  line-height: 1;
}
.product .product-info .price-and-btn .price-container{
  padding-bottom: 4rpx;
}
.product .product-info .price-and-btn .unit{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FF3633;
  font-weight: 400;
}
.product .product-info .price-and-btn .price{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FF3633;
  font-weight: 500;
}
.product .product-info .price-and-btn .add-cart{
  width: 72rpx;
  height: 72rpx;
}
/* 商品 */