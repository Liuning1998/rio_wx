/* products/pages/index/index.wxss */
page {
  background: #f7f7f7;
  height: 100%;
}

.search-container {
  position: fixed;
  left: 0;
  width: 750rpx;
  height: 44px;
  background: #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.search-container .cancel {
  font-size: 28rpx;
  color: #666666;
  padding-left: 24rpx;
}

.search-container .input-group {
  display: flex;
  align-items: center;
  /* margin-left: 24rpx; */
  box-sizing: border-box;
  width: 622rpx;
  height: 52rpx;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 0 16rpx;
}

.search-container .input-group .placeholder {
  font-size: 28rpx;
  color: #999999;
}

.search-container .input-group input {
  flex: 1;
  padding: 0 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  height: 52rpx;
  line-height: 52rpx;
}

.search-container .search-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.search-container .close {
  height: 28rpx;
  width: 28rpx;
  background:  rgba(0,0,0,0.20);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 4rpx;
}

.search-container .close-icon {
  height: 14rpx;
  width: 16rpx;
  flex-shrink: 0;
}

.list-cations-header {
  position: fixed;
  left: 0;
  width: 750rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #f7f7f7;
  z-index: 3;
}

.list-cations-header .action-item {
  font-size: 28rpx;
  color: #666666;
  display: flex;
  align-items: center;
}

.list-cations-header .action-item.active {
  color: #CE343C;
}

.list-cations-header .price-arrow {
  width: 10rpx;
  margin-left: 8rpx;
  padding-top: 2rpx;
}

.list-cations-header .price-arrow .up {
  border-width: 8rpx;
  border-style: solid;
  border-color: transparent transparent #666666 transparent;
  border-left-width: 8rpx;
  border-right-width: 8rpx;
  height: 0;
  width: 0;
}

.list-cations-header .price-arrow.up .up {
  border-color: transparent transparent #CE343C transparent;
}

.list-cations-header .price-arrow .down {
  border-width: 8rpx;
  border-style: solid;
  border-color: #666666 transparent transparent transparent;
  border-left-width: 8rpx;
  border-right-width: 8rpx;
  height: 0;
  width: 0;
  margin-top: 4rpx;
}

.list-cations-header .price-arrow.down .down {
  border-color: #CE343C transparent transparent transparent;
}

.products-container {
  padding-top: 88rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}


.products-container .product-item {
  display: flex;
  padding: 24rpx;
  box-sizing: border-box;
  margin: auto;
  margin-bottom: 14rpx;
  width: 702rpx;
  border-radius: 8rpx;
  background: #ffffff;
}

.products-container .avatar-container {
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
  overflow: hidden;
}

.products-container .avatar {
  width: 224rpx;
  height: 224rpx;
  display: flex;
}

.products-container .item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.products-container .name {
  font-size: 28rpx;
  line-height: 36rpx;
  margin-top: 18rpx;
  font-weight: 600;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
}

.products-container .name .pre_name{
  color: #F64C47;
}

.products-container .description {
  font-size: 24rpx;
  color: #D3B17D;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
}

.product-item .price-and-cart {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.product-item .price {
  font-size: 44rpx;
  color: #E76156;
  line-height: 44rpx;
  font-weight: 500;
}

.product-item .price::before {
  content: '￥';
  font-size: 24rpx;
  font-weight: 400;
}

.product-item .origin-price {
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
}

.product-item .origin-price text {
  text-decoration: line-through;
}

.product-item .cart-container {
  flex-shrink: 0;
  height: 56rpx;
  width: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(216, 216, 216, 0.5);
  border-radius: 50%;
}

.product-item .cart-container image {
  height: 22rpx;
  width: 26rpx;
}

/* 空列表样式 */
.product-empty {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f7f7;
  height: 100%;
}

.product-empty image {
  width: 336rpx;
  height: 270rpx;
  margin-top: 230rpx;
}

.product-empty text {
  font-size: 28rpx;
  color: #333333;
  margin-top: 30rpx;
}
/* 空列表样式 */