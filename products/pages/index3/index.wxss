/* products/pages/index/index.wxss */
page {
  background: #f7f7f7;
  height: 100%;
}

.navbar {
  position: fixed;
  /* top: 0; */
  left: 0;
  width: 750rpx;
  z-index: 90;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.navbar .background-image {
  position: absolute;
  left: 0;
  top: 0;
  height: 572rpx;
  width: 750rpx;
}

.navbar .navbar-content {
  width: 750rpx;
  height: 44px;
  position: relative;
}

.navbar .navbar-content.light {
  background: #ffffff;
  display: flex;
  width: 750rpx;
  justify-content: center;
  align-items: flex-end;
  border-bottom: 1px solid #f7f7f7;
}

.navbar .navbar-content.light .title {
  font-size: 36rpx;
  color: #333333;
  height: 44px;
  line-height: 44px;
}

.return-image-container {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  padding-left: 30rpx;
  padding-right: 60rpx;
  z-index: 92;
}

.return-image {
  height: 32rpx;
  width: 18rpx;
}

.ad-image {
  width: 750rpx;
  height: 572rpx;
}

.products-container {
  /* padding-top: 88rpx; */
  box-sizing: border-box;
  position: relative;
  z-index: 3;
  width: 702rpx;
  margin: -166rpx auto 0;
  background-color: #fff;
  border-radius: 8rpx;
}


.products-container .product-item {
  display: flex;
  padding: 24rpx 24rpx 0;
  box-sizing: border-box;
  margin: auto;
  width: 702rpx;
  position: relative;
}

.products-container .avatar-container {
  margin-right: 24rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
  position: relative;
  /* overflow: hidden; */
  padding-bottom: 24rpx;
}

.products-container .sort-badge {
  position: absolute;
  top: -12rpx;
  left: -12rpx;
  z-index: 3;
  width: 44rpx;
  height: 60rpx;
}

.products-container .avatar {
  width: 272rpx;
  height: 272rpx;
  display: flex;
  border-radius: 6rpx;
  border: 1rpx solid rgba(230,230,230,1);
}

.products-container .item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  position: relative;
}

.products-container .name {
  /* line-height: 36rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  line-height: 44rpx;
}

.products-container .name .pre_name{
  color: #F64C47;
}

.products-container .description {
  font-size: 24rpx;
  color: #D3B17D;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
}

.page-bottom {
  padding-bottom: 100rpx;
}

.product-item .price-and-cart {
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  padding-bottom: 14rpx;
}

.product-item .price-and-cart .price-container{
  margin-top: 14rpx;
}

.product-item .line {
  position: absolute;
  width: 100%;
  height: 1rpx;
  background: #f7f7f7;
  bottom: 0;
  right: 0;
}

.product-item .price {
  line-height: 44rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FF3633;
  font-weight: 500;
}

.product-item .price::before {
  content: '￥';
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FF3633;
  font-weight: 400;
}

.product-item .origin-price {
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
}

.product-item .origin-price text {
  text-decoration: line-through;
}

.product-item .cart-container {
  flex-shrink: 0;
  height: 72rpx;
  width: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.product-item .cart-container image {
  height: 72rpx;
  width: 72rpx;
}

.product-item .cart-container .go-product {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #999999;
  margin-left: 4rpx;
}

.product-item .cart-container .go-product image {
  width: 12rpx;
  height: 14rpx;
  display: flex;
  margin-left: 2rpx;
}

/* 空列表样式 */
.product-empty {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f7f7;
  height: 100%;
}

.product-empty image {
  width: 336rpx;
  height: 270rpx;
  margin-top: 230rpx;
}

.product-empty text {
  font-size: 28rpx;
  color: #333333;
  margin-top: 30rpx;
}
/* 空列表样式 */