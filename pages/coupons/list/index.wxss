/* pages/coupons/list/index.wxss */

page {
  background: #f7f7f7;
}

.empty-container {
  padding-top: 304rpx;
}


/* 卡片 s */
.coupon-list{
  margin-bottom: 28rpx;
}
.coupon:first-child{
  margin-top: 28rpx;
}
.coupon{
  width: 702rpx;
  margin: 0 auto 0;
  display: flex;
  position: relative;
  height: 256rpx;
  box-shadow: 0 0 16rpx -8rpx #B4AFAF;
}
.coupon .coupon-bg{
  position: absolute;
  width: 702rpx;
  height: 256rpx;
}
.coupon .info{
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  position: relative;
}
.coupon .info .info-top{
  flex: 1;
  display: flex;
  flex-direction:column;
  justify-content: center;
  padding: 0 36rpx;
}
.coupon .info .info-top text:nth-child(1){
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  word-break: break-all;
}
.coupon .info .info-top text:nth-child(2){
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #807474;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  word-break: break-all;
}
.coupon .info .info-bottom{
  height: 74rpx;
  display: flex;
  align-items: center;
  padding: 0 36rpx;
  justify-content: space-between;
  border-top: 2rpx dashed #F7F7F7;
}
.coupon .info .info-bottom text{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #807474;
}
.coupon .info .info-bottom image{
  width: 24rpx;
  height: 16rpx;
}
.coupon .info .info-bottom.active image{
  transform: rotate(180deg);
}
.coupon .money{
  width: 232rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.coupon .money .price{
  font-family: HelveticaNeue-Medium;
  font-size: 72rpx;
  color: #FFFFFF;
}
.coupon .money .price::before{
  content: "¥";
  font-family: PingFangSC-Medium;
  font-size: 44rpx;
  color: #FFFFFF;
}
.coupon .money .btn{
  width: 176rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FF3633;
}
.coupon .money .btn.gray{
  color: #CCBFBF;
}
.coupon .money .subscript{
  position: absolute;
  font-family: PingFangSC-Semibold;
  font-size: 18rpx;
  color: #FD403D;
  text-align: center;
  background-color: #fff;
  background: #FFFFFF;
  box-shadow: 0 4rpx 8rpx -4rpx #E50402;
  transform: rotate(45deg);
  top: 22rpx;
  width: 140rpx;
  right: -31rpx;
}
.coupon .money .subscript.gray{
  color: #CCBFBF;
}
/* 卡片 e */


.coupon-card-mark{
  position: absolute;
  top: -5rpx;
  left: 0;
}
.coupon-card-mark.gray{
  top: -1rpx;
}
.coupon-card-mark.gray image{
  width: 80rpx;
  height: 80rpx;
}
.coupon-card-mark.gray text{
  color: #B4AFAF;
  left: -11rpx;
}
.coupon-card-mark image{
  width: 82rpx;
  height: 84rpx;
}
.coupon-card-mark text{
  width: 100%;
  transform: rotate(-45deg);
  font-size: 18rpx;
  color: #FD403D;
  text-align: center;
  position: absolute;
  left: -10rpx;
  top: 19rpx;
}
.coupon-list-mask{
  width: 702rpx;
  margin: 0 auto;
  background: #FFFFFF;
  box-shadow: 0 0 8rpx -4rpx rgba(0,0,0,0.50);
  box-sizing: border-box;
  border-radius: 4rpx;
  padding: 40rpx 68rpx 30rpx;
  margin-top: -8rpx;
}
.coupon-list-mask view{
  position: relative;
  font-size: 20rpx;
  color: #5B5454;
  overflow-wrap: break-word;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #807474;
}
.coupon-list-mask view::before{
  position: absolute;
  content: "";
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #B4AFAF;
  top: 24rpx;
  left: -32rpx;
}
.page-container{
  height: 100vh;
}
.loading{
  text-align: center;
  padding: 30rpx 0;
  font-size: 20rpx;
  color: grey;
}