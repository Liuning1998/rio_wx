/* pages/coupons/list/index.wxss */

page {
  background: #f7f7f7;
}

.empty-container {
  margin-top: 304rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #2B2424;
}

.empty-container image {
  width: 480rpx;
  height: 244rpx;
  margin-bottom: 44rpx;
}

.coupon{
  width: 702rpx;
  height: 220rpx;
  margin: 24rpx auto 0;
  display: flex;
  position: relative;
}
.coupon > .coupon-bg{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 718rpx;
  height: 236rpx;
  transform: translate(-50%, -50%);
}
.coupon .coupon-card{
  position: relative;
}
.coupon .coupon-card > .coupon-card-bg{
  width: 220rpx;
  height: 220rpx;
}
.coupon .coupon-card .coupon-card-content{
  position: absolute;
  width: 100%;
  top: 45%;
  left: 0;
  transform: translateY(-50%);
  text-align: center;
}
.coupon .coupon-card .coupon-money text:nth-child(1){
  font-size: 20rpx;
  color: #fff;
}
.coupon .coupon-card .coupon-money text:nth-child(2){
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
.coupon .coupon-card .coupon-brief{
  width: 100%;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #fff;
}
.coupon-operation{
  width: calc(100% - 220rpx);
  display: flex;
  position: relative;
  z-index: 1;
  align-content: space-between;
  flex-wrap: wrap;
}
.coupon-operation .coupon-operation-top{
  padding: 32rpx 20rpx 0 26rpx;
  width: 100%;
  box-sizing: border-box;
}
.coupon-operation .coupon-operation-top > text {
  width: 100%;
  font-size: 32rpx;
  color: #342F27;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}
.coupon-operation .coupon-operation-top .coupon-operation-top-btn{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.coupon-operation .coupon-operation-top .coupon-operation-top-btn text:nth-child(1){
  font-size: 22rpx;
  line-height: 44rpx;
  color: #5B5454;
  width: calc(100% - 136rpx);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.coupon-operation .coupon-operation-top .coupon-operation-top-btn text:nth-child(2){
  width: 136rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background-image: linear-gradient(132deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}
.coupon-operation .coupon-operation-top .coupon-operation-top-btn text:nth-child(2).gray{
  background: #DDD8D8;
}
.coupon-operation .coupon-operation-bottom{
  border-top: 2px dashed #F7F7F7;
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding: 0 20rpx 0 26rpx;
  box-sizing: border-box;
}
.coupon-operation .coupon-operation-bottom text:nth-child(1){
  display: block;
  width: calc(100% - 50rpx);
  line-height: 54rpx;
  color: #5B5454;
  font-size: 22rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.coupon-operation .coupon-operation-bottom text:nth-child(2){
  width: 50rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: #5B5454;
  transform: rotate(180deg);
  position: relative;
  top: -3rpx;
  transition: all .3s;
}
.coupon-operation .coupon-operation-bottom.active text:nth-child(2){
  transform: rotate(0);
  top: 4rpx;
}
.coupon-card-mark{
  position: absolute;
  top: -5rpx;
  left: 0;
}
.coupon-card-mark.gray{
  top: -1rpx;
}
.coupon-card-mark.gray image{
  width: 80rpx;
  height: 80rpx;
}
.coupon-card-mark.gray text{
  color: #B4AFAF;
  left: -11rpx;
}
.coupon-card-mark image{
  width: 82rpx;
  height: 84rpx;
}
.coupon-card-mark text{
  width: 100%;
  transform: rotate(-45deg);
  font-size: 18rpx;
  color: #FD403D;
  text-align: center;
  position: absolute;
  left: -10rpx;
  top: 19rpx;
}
.coupon-list-mask{
  width: 702rpx;
  margin: 0 auto;
  background: #FFFFFF;
  box-shadow: 0 0 8rpx -4rpx rgba(0,0,0,0.50);
  box-sizing: border-box;
  border-radius: 4rpx;
  padding: 40rpx 32rpx 30rpx;
  margin-top: -8rpx;
}
.coupon-list-mask view{
  position: relative;
  font-size: 20rpx;
  color: #5B5454;
  overflow-wrap: break-word
}
.coupon-list-mask view::before{
  position: absolute;
  content: "";
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #B4AFAF;
  top: 13rpx;
  left: -20rpx;
}
.page-container{
  height: 100vh;
}
.loading{
  text-align: center;
  padding: 30rpx 0;
  font-size: 20rpx;
  color: grey;
}