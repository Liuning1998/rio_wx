/* pages/coupons/dashboard/index.wxss */

page {
  background: #f7f7f7;
}

.empty-container {
  margin-top: 304rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #2B2424;
}

.empty-container image {
  width: 480rpx;
  height: 244rpx;
  margin-bottom: 44rpx;
}


.banner{
  width: 750rpx;
  margin: 0 auto;
}
.banner-swiper{
  width: 750rpx;
  height: 372rpx;
}
.banner image{
  width: 750rpx;
  height: 372rpx;
}
.products{
  padding-bottom: 40rpx;
}
.products-title{
  width: 702rpx;
  margin: 40rpx auto;
  padding: 0 12rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
}
.products-title text{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
}


.products .products-item{
  width: 702rpx;
  margin: 0 auto 20rpx;
  height: 196rpx;
  background: #FFF8F8;
  align-items: center;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.products .products-item .products-images{
  width: 144rpx;
  height: 144rpx;
}
.products .products-item .products-content{
  width: auto;
  flex: 1;
  display: flex;
  flex-flow: column;
  justify-content: center;
  height: 100%;
  position: relative;
}
.products .products-item .products-content::before {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.products .products-item .products-content::after {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.products .products-item .products-content .products-name{
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  margin-top: 10rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
}
.products .products-item .products-content .products-value{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.products .products-item .products-content .products-value .value-text{
  line-height: 1;
  font-family: PingFangSC-Semibold;
  font-size: 56rpx;
  color: #FF3633;
}
.products .products-item .products-content .products-value .value-text::before{
  content: "￥";
  position: relative;
  top: -2rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #FF3633;
}
.products .products-item .products-content .products-value .condition-text{
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 6rpx;
  background-color: #FFF0F0;
  padding: 0 14rpx 0 14rpx;
  height: 40rpx;
  line-height: 40rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FF3633;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.products .products-item .products-button{
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  width: 238rpx;
  height: 100%;
  justify-content: center;
  border-left: 4rpx dashed #fff;
}
.products .products-item .products-button::before {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.products .products-item .products-button::after {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  bottom: -6rpx;
  left: -6rpx;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.products .products-item .products-button .btn{
  width: 192rpx;
  height: 72rpx;
  background-image: linear-gradient(90deg, #FF3633 0%, #FB2C2A 100%);
  border-radius: 54rpx;
  line-height: 72rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
}
.products .products-item .finished-img {
  position: absolute;
  width: 102rpx;
  height: 100rpx;
  top: 0;
  right: 0;
}
.products .products-item .products-button.complete  .btn{
  background: #DDD8D8;
  color: #fff;
  opacity: 0;
}
.loading{
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: grey;
}

/* 领取成功弹窗 */
.success-popup{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.success-popup .popup-content{
  position: absolute;
  top: 46%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.success-popup .popup-content .popup-images{
  width: 598rpx;
  height: 644rpx;
  display: block;
}
.success-popup .popup-content .popup-center{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  top: 0;
  left: 0;
}
.success-popup .popup-content .popup-center .title{
  margin-top: 76rpx;
  line-height: 74rpx;
  font-size: 52rpx;
  color: #F64C47;
}
.success-popup .popup-content .popup-center .popup-bottom{
  padding-bottom: 32rpx;
}
.success-popup .popup-content .popup-center .popup-bottom .text{
  font-size: 24rpx;
  color: #FFFFFF;
  margin-bottom: 6rpx;
}
.success-popup .popup-content .popup-center .popup-bottom .btn{
  width: 456rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFFFFF;
  border-radius: 48px;
  font-size: 32rpx;
  color: #F64C47;
  margin: 0 auto;
}
.success-popup .popup-content .close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: -94rpx;
    left: 50%;
    transform: translateX(-50%);
}
.page-container{
  height: 100vh;
}
/* 失败弹窗 */
.error-popup{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.error-popup .error-content{
  width: 598rpx;
  border-radius: 16rpx;
  background-color: #fff;
  padding: 76rpx 60rpx 32rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
} 
.error-popup .error-content .error-title{
  font-size: 52rpx;
  color: #2B2424;
  text-align: center;
}
.error-popup .error-content .error-text{
  margin: 8rpx 0 40rpx;
  font-size: 32rpx;
  color: #2B2424;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  text-align: center;
}
.error-popup .error-content .error-image{
  width: 198rpx;
  height: 198rpx;
  margin: 0 auto;
  display: block;
}
.error-popup .error-content .error-btn{
  width: 456rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background-image: linear-gradient(135deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 48rpx;
  text-align: center;
  margin: 42rpx auto 0;
}

.coupons-box{
  background: #FFFFFF;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
  margin-top: -78rpx;
  position: relative;
  z-index: 1;
  min-height: calc(100% - 294rpx);
}