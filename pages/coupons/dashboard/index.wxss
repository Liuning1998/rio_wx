/* pages/coupons/dashboard/index.wxss */

page {
  background: #f7f7f7;
}

.empty-container {
  margin-top: 304rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #2B2424;
}

.empty-container image {
  width: 480rpx;
  height: 244rpx;
  margin-bottom: 44rpx;
}


.banner{
  width: 702rpx;
  margin: 0 auto;
}
.banner-swiper{
  width: 702rpx;
  height: 220rpx;
  margin-top: 24rpx;
}
.banner image{
  width: 702rpx;
  height: 220rpx;
}
.products-title{
  margin: 36rpx 0;
  line-height: 39.6rpx;
  font-size: 28rpx;
  color: #2B2424;
  display: flex;
  justify-content: center;
  align-items: center;
}
.products-title .text{
  margin: 0 16rpx;
}
.products-title .icon{
  transform: scaleX(-1) scaleY(-1) rotate(-330deg);
  border-radius: 200rpx 200rpx 0 0;
  width: 10rpx;
  height: 40rpx;
  display: inline-block;
  margin: 0 4rpx;
}
.products-title .yellow-icon{
  background-image: linear-gradient(180deg, #FCE070 0%, rgba(252,224,112,0.00) 100%);
}
.products-title .red-icon{
  background-image: linear-gradient(180deg, #FF7673 0%, rgba(251,44,42,0.00) 100%);
}

.products .products-item{
  width: 702rpx;
  margin: 0 auto 16rpx;
  background-color: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
}
.products .products-item .products-images{
  width: 144rpx;
  height: 144rpx;
}
.products .products-item .products-content{
  width: 346rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.products .products-item .products-content .products-name{
  font-size: 28rpx;
  color: #342F27;
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.products .products-item .products-content .products-value{
  display: flex;
  align-items: flex-end;
}
.products .products-item .products-content .products-value .value-text{
  font-size: 40rpx;
  color: #F64C47;
  line-height: 1;
}
.products .products-item .products-content .products-value .value-text::before{
  content: "￥";
  font-size: 20rpx;
  color: #F64C47;
}
.products .products-item .products-content .products-value .condition-text{
  margin-left: 8rpx;
  line-height: 24rpx;
  font-size: 16rpx;
  border-radius: 12rpx;
  background-color: #FFEAEB;
  color: #F64C47;
  padding: 0 12rpx;
  margin-bottom: 4rpx;
}
.products .products-item .products-button{
  display: flex;
  align-items: center;
}
.products .products-item .products-button .btn{
  width: 136rpx;
  height: 58rpx;
  background-image: linear-gradient(132deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 29rpx;
  line-height: 58rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.products .products-item .products-button.complete  .btn{
  background: #DDD8D8;
  color: #fff;
}
.loading{
  text-align: center;
  padding: 30rpx 0;
  font-size: 20rpx;
  color: grey;
}

/* 领取成功弹窗 */
.success-popup{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.2);
  position: fixed;
  top: 0;
  left: 0;
}
.success-popup .popup-content{
  position: absolute;
  top: 46%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.success-popup .popup-content .popup-images{
  width: 598rpx;
  height: 644rpx;
  display: block;
}
.success-popup .popup-content .popup-center{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  top: 0;
  left: 0;
}
.success-popup .popup-content .popup-center .title{
  margin-top: 76rpx;
  line-height: 74rpx;
  font-size: 52rpx;
  color: #F64C47;
}
.success-popup .popup-content .popup-center .popup-bottom{
  padding-bottom: 32rpx;
}
.success-popup .popup-content .popup-center .popup-bottom .text{
  font-size: 24rpx;
  color: #FFFFFF;
  margin-bottom: 6rpx;
}
.success-popup .popup-content .popup-center .popup-bottom .btn{
  width: 456rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFFFFF;
  border-radius: 48px;
  font-size: 32rpx;
  color: #F64C47;
  margin: 0 auto;
}
.success-popup .popup-content .close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: -94rpx;
    left: 50%;
    transform: translateX(-50%);
}
.page-container{
  height: 100vh;
}
/* 失败弹窗 */
.error-popup{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.2);
  position: fixed;
  top: 0;
  left: 0;
}
.error-popup .error-content{
  width: 598rpx;
  border-radius: 16rpx;
  background-color: #fff;
  padding: 76rpx 60rpx 32rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
} 
.error-popup .error-content .error-title{
  font-size: 52rpx;
  color: #2B2424;
  text-align: center;
}
.error-popup .error-content .error-text{
  margin: 8rpx 0 40rpx;
  font-size: 32rpx;
  color: #2B2424;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.error-popup .error-content .error-image{
  width: 198rpx;
  height: 198rpx;
  margin: 0 auto;
  display: block;
}
.error-popup .error-content .error-btn{
  width: 456rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background-image: linear-gradient(135deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 48rpx;
  text-align: center;
  margin: 42rpx auto 0;
}