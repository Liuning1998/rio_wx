/* pages/products/buy/index.wxss */
page {
  background: #f7f7f7;
}
.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
  padding-bottom: 174rpx;
  box-sizing: border-box;
}

.page-content {
  display: flex;
  flex-direction: column;
  position: relative;
}

.main-container {
  margin-top: 40rpx;
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 240rpx;
  padding: 0 40rpx;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.page-background {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background: linear-gradient(to right, #EEDEB0, #D3B17D);
  width: 750rpx;
  height: 284rpx;  
}

.page-content.iphone-x {
  margin-bottom: 360rpx;
}

.content-title {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  background: #ffffff;
  font-size: 28rpx;
  color: #333333;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.split-image {
  width: 100%;
}

/* 商品列表 */
.products {
  padding: 30rpx 10rpx;
  box-sizing: border-box;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

.products .avatar {
  height: 160rpx;
  width: 160rpx;
  flex-shrink: 0;
  margin-right: 12rpx;
}

.products .product-item {
  display: flex;
}

.products .product-info {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.products .name-quantity {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.products .name {
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  max-height: 80rpx;
  width: 260rpx;

  display: -webkit-box;
	white-space: normal !important;
	-webkit-line-clamp: 2;
  line-clamp: 2;
	-webkit-box-orient: vertical;
}

.products .variant-desc {
  font-size: 24rpx;
  color: #666666;
}

.products .variant-price {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.products .quantity {
  font-size: 24rpx;
  color: #888888;
}

.products .price {
  font-size: 28rpx;
  color: #666666;
  line-height: 32rpx;
}
/* 商品列表 */

.split-container {
  width: 100%;
  background: #ffffff;
}

/* 费用说明 */
.products .expenses {
  width: 100%;
}

.expenses {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.expenses .product-expenses {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.expenses .product-expenses .label {
  font-size: 28rpx;
  color: #666666;
}

.amount {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.amount .price {
  font-weight: bold;
}
/* 费用说明 */

/* 底部按钮 */
.bottom-tools {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  background-color: white;
  position: fixed;
  z-index: 199;
  bottom: 0;
  left: 0;
  width: 100%;
  /* border-top: 1rpx solid #f7f7f7; */
  padding: 0;
  box-sizing: border-box;
}

.btn-container {
  height: 108rpx;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.pay-btn {
  /* margin-top: 16rpx; */
  height: 72rpx;
  width: 400rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 36rpx;
  background: linear-gradient(to right, #D3B27E, #EEDEB0, #D3B27E);
  font-size: 36rpx;
  color: #8E662F;
  padding: 0;
  position: relative;
  /* box-shadow: 0 50rpx 30rpx #F45C4330; */
}

.btn.pay-btn.disable {
  background: #aaaaaa;
  color: #ffffff;
}

.bottom-tools.iphone-x {
  padding-bottom: 68rpx;
  height: 168rpx;
}
/* 底部按钮 */

.protocol {
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  display: flex;
  line-height: 44rpx;
  flex-shrink: 0;
}

.protocol .bold {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin: 0 6rpx;
}

.protocol-item {
  color: #AD9464;
}

.protocol .checkbox {
  height: 34rpx;
  width: 34rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin-top: 4rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  border: 1rpx solid #E0E0E0;
  flex-shrink: 0;
}

.protocol .checkbox image {
  display: none;
}

.protocol .checkbox.active {
  border: 1rpx solid #E0E0E0;
  background: #ffffff;
}

.protocol .checkbox.active image {
  display: inline-block;
  width: 24rpx;
  height: 20rpx;
}

.time-remark {
  font-size: 28rpx;
  color: #ffffff;
  position: absolute;
  z-index: 199;
  width: 750rpx;
  height: 64rpx;
  left: 0;
  top: -64rpx;
  background: #EBD9AA;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-remark image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
}