page {
  background: #f5f5f5;
}

.banner-container .banner {
  height: 304rpx;
  width: 750rpx;
}

.main-content {
  position: relative;
  z-index: 5;
  top: -48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-content .contact-content {
  border-radius: 8rpx;
  background: #ffffff;
  width: 702rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.main-content .description {
  padding: 48rpx 24rpx 30rpx 24rpx;
  font-size: 28rpx;
  color: #5B5454;
}

.main-content .btn-container {
  display: flex;
  flex-direction: column;
  padding: 80rpx 0 64rpx 0;
  align-items: center;
  border-top: 1px solid #f7f7f7;
}

.main-content .btn-container .desc {
  font-size: 28rpx;
  color: #5B5454;
}

.main-content .btn-container button {
  background:linear-gradient(90deg, #FF524E 0%, #FB2C2A 100%);
  width: 208rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0;
  border: none;
  margin: 0;
  margin-top: 24rpx;
  border-radius: 32rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.main-content .time-desc {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #F64C47;
  margin-top: 5rpx;
  line-height: normal;
}