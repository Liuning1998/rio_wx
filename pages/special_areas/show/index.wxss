  position: relative;
  justify-content: center;
  align-items: center;
}

.return-image-container {
  position: absolute;
  left: 0;
  top: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  padding-left: 30rpx;
  padding-right: 60rpx;
  z-index: 92;
}

.return-image {
  height: 32rpx;
  width: 18rpx;
}

.navbar-content .navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  height: 44px;
  line-height: 44px;
  color: #ffffff;
}

/* nav bar */

.loading-icon {
  position: fixed;
  z-index: 90;
  width: 90rpx;
  height: 50rpx;
  left: 328rpx;
  margin-top: 20rpx;
}

.hidden {
  display: none !important;
  /* animation: viewlinear 2s linear infinite; */
}

.page-container {
  position: relative;
  z-index: 11;
}

.ads-container {
  height: 750rpx;
  width: 750rpx;
  position: relative;
  /* overflow: hidden; */
  box-sizing: border-box;
  z-index: 3;
}

.ads-background {
  position: absolute;
  top: 0;
  height: 750rpx;
  z-index: 2;
}

.ads-background .background-image{
  width: 750rpx;
  overflow: hidden;
  height: 750rpx;
  display: flex;
  justify-content: center;
  position: absolute;
  top: 0;
}

.ads-background image {
  height: 750rpx;
  width: 750rpx;
  margin: auto;
}

.search-container {
  display: flex;
  /* align-items: center; */
  /* margin-bottom: 16rpx; */
  justify-content: center;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0,0,0,0));
  height: 96rpx;
  width: 750rpx;
}

.search-container .cancel {
  font-size: 28rpx;
  color: #ffffff;
  flex-shrink: 0;
  padding-left: 24rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.search-input {
  width: 702rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 0 10rpx;
  box-sizing: border-box;
}

.search-input input{
  display: none;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  height: 56rpx;
  line-height: 56rpx;
  flex: 1;
}

.search-input.active input{
  display: inline-block;
}

.search-input.active {
  justify-content: flex-start;
  width: 622rpx;
}

.search-input.active .remark {
  display: none;
}

.search-input .search-icon {
  height: 32rpx;
  width: 32rpx;
  display: flex;
  margin: 10rpx;
  flex-shrink: 0;
}

.search-input.active .close {
  display: flex;
}

.search-input .close {
  height: 28rpx;
  width: 28rpx;
  background:  rgba(0,0,0,0.20);
  border-radius: 50%;
  display: none;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin: 10rpx;
}

.search-input .close-icon {
  height: 14rpx;
  width: 16rpx;
  flex-shrink: 0;
}

.category-container {
  display: flex;
  width: 702rpx;
  flex-wrap: wrap;
  margin: auto;
  background: #ffffff;
  border-radius: 8rpx;
  position: relative;
  z-index: 8;
  top: -36rpx;
  padding-top: 24rpx;
  padding-bottom: 4rpx;
  box-sizing: border-box;
  justify-content: space-around;
}

.category-container .category-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-item .icon-container {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}

.category-item .icon-container image {
  width: 90rpx;
  height: 90rpx;
  display: flex;
}

.category-item .name {
  font-size: 24rpx;
  color: #333333;
  margin-top: 10rpx;
}

.section-label {
  width: 750rpx;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 18rpx;
}

.section-label .dot-1 {
  height: 8rpx;
  width: 8rpx;
  opacity: 0.5;
  background: #D7AB5C;
  border-radius: 50%;
}

.section-label .dot-2 {
  height: 16rpx;
  width: 16rpx;
  opacity: 0.5;
  background: #D7AB5C;
  margin: 8rpx;
  border-radius: 50%;
}

.section-label text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin: 8rpx;
}

.page-main-container.container-01 {
  position: relative;
  top: -40rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  z-index: 4;
  background: #f7f7f7;
}

/* 店铺精选 */
.fine-container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  /* background: #E5EFFC; */
}

.fine-container .products-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  box-sizing: border-box;
  /* justify-content: space-between; */
}

.fine-container .product-item {
  display: flex;
  flex-direction: column;
  width: 222rpx;
  overflow: hidden;
  margin-bottom: 18rpx;
  background: #ffffff;
  border-radius: 8rpx;
  margin-right: 18rpx;
}

.fine-container .product-item:first-child {
  width: 462rpx;
}

.fine-container .product-item:nth-child(3n+2) {
  margin-right: 0;
}

.fine-container .product-item:first-child .avatar-container, .fine-container .product-item:first-child .avatar {
  width: 462rpx;
}

/* .fine-container .product-item:nth-child(6) .avatar-container, .fine-container .product-item:nth-child(6) .avatar {
  width: 702rpx;
} */

.fine-container .avatar-container {
  height: 222rpx;
  width: 222rpx;
  flex-shrink: 0;
  position: relative;
  border-bottom: 1px solid #FAF5E8;
}

.fine-container .avatar-container .top-badge{
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  z-index: 4;
  width: 88rpx;
  height: 52rpx;
}

.fine-container .avatar {
  height: 222rpx;
  width: 222rpx;
  display: flex;
}

.fine-container .product-content {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  z-index: 14;
}

.fine-container .info {
  flex: 1;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 14;
  margin-top: 14rpx;
}

.fine-container .name {
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
}

.fine-container .description {
  font-size: 20rpx;
  color: #D3B17D;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
  max-width: 460rpx;
}

.fine-container .product-item:nth-child(6) .price-container {
  flex-direction: row-reverse;
  justify-content: flex-end;
  align-items: center;
}
.fine-container .price-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  padding:  0 20rpx;
}

.fine-container .product-item:nth-child(6) .origin-price {
  bottom: -6rpx;
}
.fine-container .origin-price {
  font-size: 20rpx;
  color: #999999;
  font-weight: 500;
  text-decoration: line-through;
  position: relative;
  bottom: -10rpx;
  left: 6rpx;
}

.fine-container .price {
  font-size: 32rpx;
  color: #CE343C;
  font-weight: 500;
}

.fine-container .price::before {
  content: '￥';
  font-size: 20rpx;
  position: relative;
  bottom: 1rpx;
}

.fine-container .price .sub {
  font-size: 20rpx;
  font-weight: 600;
}

.fine-container .buy-now-6 {
  width: 168rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: linear-gradient(to bottom, #8AADE6, #2F50D5);
  box-shadow: 0 6px 16px -4px rgba(132,167,229,0.50);
  border-radius: 32rpx;
  position: absolute;
  z-index: 13;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.fine-container .product-item:nth-child(6) .background-icon-001, .fine-container .product-item:nth-child(6) .background-icon-002 {
  display: none;
}
.fine-container .background-icon-001 {
  position: absolute;
  left: -2rpx;
  top: 0;
  width: 222rpx;
  height: 14rpx;
  z-index: 13;
}

.fine-container .background-icon-002 {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 154rpx;
  height: 121rpx;
  z-index: 13;
}

.fine-container .click-area {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 52rpx;
  height: 48rpx;
  z-index: 14;
}

.fine-container .buy-btn{
  position: absolute;
  right: 12rpx;
  bottom:24rpx;
  z-index: 14;
  height: 52rpx;
  line-height: 42rpx;
  min-width: 52rpx;
  border-radius: 26rpx;
  background: #D7AB5C;
  color: #ffffff;
  font-size: 22rpx;
  padding: 0 28rpx;
  text-align: center;
}

.fine-container .buy-btn.buy-btn-01::before {
  content: '+';
  font-size: 40rpx;
  position: relative;
  top: 2rpx;
  left: -2rpx;
}

.fine-container .buy-btn.buy-btn-02 {
  padding: 0;
  font-size: 40rpx;
  line-height: 48rpx;
}
