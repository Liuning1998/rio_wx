/* pages/store/home/index.wxss */
page {
  height: 100%;
  background: #f7f7f7;
}

/* nav bar */
.navbar-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 992;
  width: 100%;
}

.navbar-content {
  width: 100%;
  height: 44px;
  line-height: 44px;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.return-image-container {
  position: absolute;
  left: 0;
  top: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  padding-left: 30rpx;
  padding-right: 60rpx;
  z-index: 92;
}

.return-image {
  height: 32rpx;
  width: 18rpx;
}

.navbar-content .navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  height: 44px;
  line-height: 44px;
  color: #ffffff;
}

/* nav bar */

.loading-icon {
  position: fixed;
  z-index: 90;
  width: 90rpx;
  height: 50rpx;
  left: 328rpx;
  margin-top: 20rpx;
}

.hidden {
  display: none !important;
  /* animation: viewlinear 2s linear infinite; */
}

.page-container {
  position: relative;
  z-index: 11;
}

.ads-container {
  height: 750rpx;
  width: 750rpx;
  position: relative;
  /* overflow: hidden; */
  box-sizing: border-box;
  z-index: 3;
}

.ads-background {
  position: absolute;
  top: 0;
  height: 750rpx;
  z-index: 2;
}

.ads-background .background-image{
  width: 750rpx;
  overflow: hidden;
  height: 750rpx;
  display: flex;
  justify-content: center;
  position: absolute;
  top: 0;
}

/* swiper */
.ads-background  swiper{
  width:100%;
  height: 100%;
}

.ads-background image {
  height: 750rpx;
  width: 750rpx;
  margin: auto;
}

.search-container {
  display: flex;
  /* align-items: center; */
  /* margin-bottom: 16rpx; */
  justify-content: center;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0,0,0,0));
  height: 96rpx;
  width: 750rpx;
}

.search-container .cancel {
  font-size: 28rpx;
  color: #ffffff;
  flex-shrink: 0;
  padding-left: 24rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.search-input {
  width: 702rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 0 10rpx;
  box-sizing: border-box;
}

.search-input input{
  display: none;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  height: 56rpx;
  line-height: 56rpx;
  flex: 1;
}

.search-input.active input{
  display: inline-block;
}

.search-input.active {
  justify-content: flex-start;
  width: 622rpx;
}

.search-input.active .remark {
  display: none;
}

.search-input .search-icon {
  height: 32rpx;
  width: 32rpx;
  display: flex;
  margin: 10rpx;
  flex-shrink: 0;
}

.search-input.active .close {
  display: flex;
}

.search-input .close {
  height: 28rpx;
  width: 28rpx;
  background:  rgba(0,0,0,0.20);
  border-radius: 50%;
  display: none;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin: 10rpx;
}

.search-input .close-icon {
  height: 14rpx;
  width: 16rpx;
  flex-shrink: 0;
}

.content-container {
  position: relative;
  z-index: 8;
  top: -36rpx;
}

.category-container {
  display: flex;
  width: 702rpx;
  flex-wrap: wrap;
  margin: auto;
  background: #ffffff;
  border-radius: 16rpx;
  padding-top: 24rpx;
  padding-bottom: 4rpx;
  box-sizing: border-box;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.category-container .badges image {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  margin-right: 4rpx;
}

.category-container .badges {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 28rpx 40rpx;
  padding-top: 0;
}

.category-container .badge-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #625C55;
}

.category-container .category-content {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.category-container .category-content.more {
  justify-content: flex-start;
  flex-wrap: wrap;
}

.category-container .category-content.more .category-item {
  width: 25%;
}

.category-container .category-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-item .icon-container {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  /* border-radius: 50%; */
  overflow: hidden;
}

.category-item .icon-container image {
  width: 90rpx;
  height: 90rpx;
  display: flex;
}

.category-item .name {
  font-size: 24rpx;
  color: #333333;
  margin-top: 10rpx;
}

.section-label {
  width: 750rpx;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 18rpx;
}

.section-label .dot-1 {
  height: 8rpx;
  width: 8rpx;
  opacity: 0.5;
  background: #D7AB5C;
  border-radius: 50%;
}

.section-label .dot-2 {
  height: 16rpx;
  width: 16rpx;
  opacity: 0.5;
  background: #D7AB5C;
  margin: 8rpx;
  border-radius: 50%;
}

.section-label text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin: 8rpx;
}


/* 热销商品 */
.hot-sale .avatar {
  height: 208rpx;
  width: 208rpx;
  display: flex;
  flex-shrink: 0;
}

.hot-sale .cart-container image {
  height: 22rpx;
  width: 22rpx;
  display: flex;
  flex-shrink: 0;
}

.hot-sale {
  width: 702rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.hot-sale .label {
  font-size: 28rpx;
  color: #2B2424;
  width: 654rpx;
  margin-left: 24rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 28rpx;
  padding-bottom: 44rpx;
  border-bottom: 1rpx solid #F7F7F7;
}

.hot-sale .products-container {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  overflow-x: scroll;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.hot-sale .product-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 208rpx;
  margin-right: 18rpx;
  box-sizing: border-box;
}

.hot-sale .product-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
  padding: 0 8rpx;
}

.hot-sale .product-item:first-child {
  margin-left: 24rpx;
}

.hot-sale .product-item .name {
  font-size: 28rpx;
  color: #2B2424;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
  flex: 1;
}

.hot-sale .product-item .name .pre_name{
  color: #F64C47;
}

.hot-sale .product-item .price-and-cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.hot-sale .price-container {
  display: flex;
  align-items: center;
}

.hot-sale .price-int {
  font-size: 28rpx;
  color: #F64C47;
  font-weight: 500;
}

.hot-sale .price-int::before {
  content: '￥';
  font-size: 20rpx;
  color: #FB2C2A;
}

.hot-sale .price-decimal {
  font-size: 20rpx;
  color: #FB2C2A;
  font-weight: 500;
  padding-top: 4rpx;
}

.hot-sale .price-decimal::before {
  content: '.';
}

.hot-sale .cart-container {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 热销商品 */

