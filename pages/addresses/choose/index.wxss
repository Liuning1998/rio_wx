/* ------------v1.2---------------- */
.address-item-container{
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  background-color: #fff;
  align-items: center;
}
.address-item-container .checkbox{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 28rpx;
  width: 28rpx;
  border: 1px solid #B4AFAF;
  border-radius: 50%;
  margin-right: 24rpx;
  margin-left: 24rpx;
  overflow: hidden;
}
.address-item-container .checkbox image {
  display: none;
  width: 35.96rpx;
  height: 35.96rpx;
}

.address-item-container .checkbox.selected {
  background: #FF3633;
  border-color: #FF3633;
}

.address-item-container .checkbox.selected image {
  display: flex;
}
.address-item-container .info{
  width: 544rpx;
  position: relative;
  box-sizing: border-box;
  padding: 28rpx 24rpx 25rpx 0;
}
.address-item-container .info .name-and-phone {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.address-item-container .info .name {
  margin-right: 36rpx;
  font-size: 40rpx;
  color: #332B2B;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  max-width: 320rpx;
  font-family: PingFangSC-Medium;
}

.address-item-container .info .phone {
  font-size: 40rpx;
  color: #332B2B;
  font-weight: 500;
  margin-right: 12rpx;
  font-family: PingFangSC-Medium;
}

.address-item-container .info .default-badge {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 8rpx;
  color: #FF3633;
  font-size: 28rpx;
  font-weight: 500;
  display: inline-block;
  background: #FFF0F0;
  box-sizing: border-box;
  border-radius: 6rpx;
  font-family: PingFangSC-Medium;
  flex: none;
}

.address-item-container .info .address-info {
  font-size: 36rpx;
  color: #332B2B;
  font-weight: 400;
  font-family: PingFangSC-Regular;
}
.address-item-container .info::after{
  content: "";
  position: absolute;
  width: 1rpx;
  height: 96rpx;
  background-color: rgba(230,230,230,1);
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}
.address-item-container  .edit{
  flex: 1;
  display: flex;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #807474;
  font-weight: 400;
}

.loading-icon {
  position: fixed;
  z-index: 90;
  width: 90rpx;
  height: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 20rpx;
}