/* pages/address/index/index.wxss */
page {
  background-color: #f7f7f7;
}
.container {
  padding-bottom: 120rpx;
  padding-top: 0;
  height: auto;
}

.container.iphone-x {
  padding-bottom: 188rpx;
}

.address-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  /* height: 100%; */
}

.empty-list {
  margin-top: 226rpx;
