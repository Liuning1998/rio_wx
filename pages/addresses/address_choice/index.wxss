.loading{
  position: absolute;
  width: 100%;
  height: 100%;
  /* background-color: #f0f0f0; */
  z-index: 1;
  top: 0;
  left: 0;
}
.loading image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}