/*弹窗*/
 
.goods-detail .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}
 
.goods-detail .mask {
  background: rgba(0, 0, 0, 0.6);
}
 
.goodsdetail {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 962rpx;
  background: #fff;
  z-index: 20;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.goodsdetail-title{
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #332B2B;
  line-height: 40rpx;
  padding: 0 80rpx;
  position: relative;
  box-sizing: border-box;
 }

.goodsdetail-top {
  height: 100rpx;
  width: 750rpx;
  box-sizing: border-box;
  background: #FAFAFA;
  padding: 0 24rpx;
  position: relative;
  white-space: nowrap;
  overflow: hidden;
}
 
.goodsdetail-top-l {
  height: 100rpx;
  padding: 0 12rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  display: inline-block;
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  letter-spacing: -1.2rpx;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.goodsdetail-top-l::after{
  content: "";
  width: 2rpx;
  height: 24rpx;
  background-color: #E6E6E6;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}

.goodsdetail-top-l:last-child::after{
  display: none;
}
 
.goodsdetail-top-l-o {
  font-family: PingFangSC-Medium;
  color: #FF3633;
  border-bottom: 4rpx solid #FF3633;
}
 
