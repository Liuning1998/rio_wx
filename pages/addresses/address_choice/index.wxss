.goods-detail .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}
 
.goods-detail .mask {
  background: rgba(0, 0, 0, 0.6);
}
 
.goodsdetail {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 700rpx;
