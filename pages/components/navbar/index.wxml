<!--pages/components/navbar/index.wxml-->

<view style="{{ appendStyle }}" class='{{navbarStyle == "dark" ? "navbar-container-dark" : "navbar-container"}}'>
  <image class="dark_bg" wx:if="{{navbarStyle == 'dark'}}" src="/images/v1.2/nav_bg.png"></image>
  <view class='status-bar' style='height: {{ statusBarHeight }}px;'></view>
  <view class='navbar-content'>
    <view wx:if='{{returnAble}}' bindtap='goback' class='return-image-container'>
      <image wx:if="{{returnAble && navbarStyle == 'dark'}}" class='return-image' src='../../../images/arrow_o_white_01.png'></image>
      <image wx:if="{{returnAble && navbarStyle != 'dark'}}" class='return-image' src='../../../images/arrow_o_black.png'></image>
    </view>
    <text style="{{textStyle}}" class='navbar-title {{navbarStyle == "dark" && "text-white"}}'>{{ title }}</text>
  </view>
</view>