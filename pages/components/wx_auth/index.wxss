/* 授权页面的样式 */

.auth-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.auth {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  margin: 30rpx;
  border-radius: 20rpx;
}

.auth-logo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 130rpx;
}

.auth-logo image {
  height: 160rpx;
  width: 160rpx;
}

.auth-logo .icon-01 {
  margin-top: 12rpx;
  height: 50rpx;
  width: 242rpx;
}

.auth .btn-group .mark {
  display: flex;
  flex-direction: column;
  /* width: 600rpx; */
}

.auth .msg {
  margin-top: 100rpx;
  padding: 0  30rpx;
  font-size: 30rpx;
  color: #333333;
}

.auth .msg .remark {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

.auth .msg .remark .fa-circle {
  font-size: 15rpx;
  padding: 0 20rpx;
}

.btn-group {
  margin-top: 60rpx;
  display: flex;
}

