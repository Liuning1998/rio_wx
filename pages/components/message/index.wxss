/* pages/components/message/index.wxss */

.score-message-toast-container {
  position: fixed;
  z-index: 999901;
  top: 0;
  left: 0;
  height: 100%;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: rgba(0, 0, 0, 0.25); */
}

.score-message-toast-container .score-message-toast-content {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  padding: 30rpx;
  max-width: 510rpx;
  box-sizing: border-box;
  min-width: 300rpx;
  min-height: 200rpx;
  max-height: 750rpx;
}

.score-message-toast-container .score-message-toast-content.large {
  justify-content: flex-start;
}


.score-message-toast-container .score-message-toast-content.has-close {
  min-width: 300rpx;
  min-height: 200rpx;
}

.score-message-toast-container .score-message-toast-content.success {
  background-color: rgba(0, 0, 0, 0.6);
  /* border: 1rpx solid #ededed; */
}

.score-message-toast-container .score-message-toast-content.error {
  background-color: rgba(0, 0, 0, 0.6);
  /* border: 1rpx solid #ededed; */
}

.score-message-toast-container .score-message-toast-content.warning {
  background-color: rgba(0, 0, 0, 0.6);
  /* border: 1rpx solid #ededed; */
}

.score-message-toast-container image.score-message-close {
  height: 20rpx;
  width: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 20rpx;
}

.score-message-toast-container image.score-message-badge {
  height: 56rpx;
  width: 56rpx;
  margin-bottom: 20rpx;
  overflow: visible;
}

.score-message-toast-container .score-message-text {
  font-size: 28rpx;
  color: #eeeeee;
  text-align: center;
}

.score-message-title {
  position: absolute;
  width: 114rpx;
  height: 171rpx;
  left: -5rpx;
  top: -110rpx;
}