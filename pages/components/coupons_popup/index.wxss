/* pages/coupons/coupons_popup/index.wxss */
.coupon{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
.coupon-mask{
  position: absolute;
  top: 0;
  height: 0;
  background-color: rgba(0,0,0,.4);
  width: 100%;
  height: 100%;
}
.popup{
  width: 100%;
  height: 75vh;
  background-color: #fff;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.popup .popup-title{
  width: 100%;
  line-height: 108rpx;
  height: 108rpx;
  text-align: center;
  font-size: 32rpx;
  color: #2B2424;
  position: relative;
}
.popup .popup-title .close{
  position: absolute;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #2B2424;
  height: 44rpx;
  width: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #2B2424;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup .popup-title .close image{
  width: 9.2rpx;
  height: 17.8rpx;
  display: inline-block;
}
.popup .popup-title .close image:first-child{
  transform: rotate(180deg);
  position: relative;
  left: 1rpx;
}
.popup .popup-title .close image:last-child{
  position: relative;
  right: 1rpx;
}
.popup-brief{
  border-top:2rpx solid #F7F7F7;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
  color:  #B4AFAF;
  padding: 0 26rpx;
}
.pupup-scroll{
  width: 100%;
  height: calc(100% - 188rpx);
  background: #F7F7F7;
  padding-bottom: 232rpx;
  box-sizing: border-box;
}
.popup-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 64rpx 0;
  border-top: 2rpx solid #F7F7F7;
  display: flex;
  justify-content: center;
}
.popup-btn view{
  width: 654rpx;
  height: 84rpx;
  display: inline-block;
  background-image: linear-gradient(118deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 100rpx;
  line-height: 84rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
.popup-item{
  width: calc(100% - 48rpx);
  margin: 20rpx auto 0;
  background-color: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}
.popup-item .item-images{
  width: 144rpx;
  height: 144rpx;
}
.popup-item .item-center{
  width: 346rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.popup-item .item-center .item-name{
  font-size: 28rpx;
  color: #342F27;
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}
.popup-item .item-center .item-value{
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}
.popup-item .item-center .item-value .value-text{
  font-size: 48rpx;
  color: #F64C47;
  line-height: 1;
  font-weight: 500;
}
.popup-item .item-center .item-value .value-text::before{
  content: "ï¿¥";
  font-size: 20rpx;
  color: #F64C47;
  position: relative;
  top: -2rpx;
}
.popup-item .item-center .item-value .condition-text{
  margin-left: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 25rpx;
  background-color: #FFEAEB;
  color: #F64C47;
  padding: 0 14rpx 0;
  margin-bottom: 4rpx;
  height: 35rpx;
  line-height: 35rpx;
  justify-content: center;
  align-items: center;
}
.popup-item .receive-btn{
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}
.popup-item .receive-btn .btn{
  width: 136rpx;
  height: 58rpx;
  background-image: linear-gradient(132deg, #FF524E 0%, #FB2C2A 100%);
  border-radius: 29rpx;
  line-height: 58rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.popup-item .receive-btn .btn1{
  width: 136rpx;
  height: 58rpx;
  border-radius: 29rpx;
  line-height: 58rpx;
  text-align: center;
  color: #F64C47;
  font-size: 28rpx;
}
.load-error{
  font-size: 24rpx;
  color: #2B2424;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.finished-img{
  position: absolute;
  width: 100rpx;
  height: 90rpx;
  top: 0;
  right: 0;
}

.hove-btn{
  opacity: .8;
}