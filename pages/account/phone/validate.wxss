/* pages/account/phone/validate.wxss */
page {
  background-color: white;
}

.page-container {
  width: 750rpx;
  position: relative;
}

.form-container {
  display: flex;
  flex-direction: column;
}

.form-header {
  display: flex;
  justify-content: space-between;
  padding: 0 48rpx;
  margin-top: 64rpx;
}

.header-container {
  display: flex;
  flex-direction: column;
}

.header-container .main {
  font-size: 40rpx;
  color: #342F27;
  font-weight: 500;
}

.header-container .sub {
  font-size: 28rpx;
  color: #5B5454;
}

.form-header .default-avatar {
  height: 88rpx;
  width: 88rpx;
}

.form-body {
  width: 100%;
  padding: 0 48rpx;
  margin-top: 64rpx;
  box-sizing: border-box;
}

.field-group {
  display: flex;
  border: 1px solid #f7f7f7;
  margin-bottom: 8rpx;
  border-radius: 8rpx;
  height: 96rpx;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.input-group {
  display: flex;
  align-items: center;
}

.rucaptcha-image {
  border: 1px solid #f7f7f7;
}

.icon-container {
  display: flex;
  align-items: center;
  height: 40rpx;
  width: 24rpx;
  justify-content: center;
}

.input {
  padding: 0 24rpx;
}

.code-btn {
  font-size: 28rpx;
  color: #F64C47;
}

.code-btn.disabled {
  font-size: 28rpx;
  color: #DDD8D8;
}

.input {
  font-size: 32rpx;
  color: #2b2424;
}

.input-placeholder {
  font-size: 32rpx;
  color: #b4afaf;
}

.form-btn {
  display: block;
  height: 88rpx;
  width: 654rpx;
  background: linear-gradient(135deg, #FF524E 0%, #FB2C2A 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  margin-top: 88rpx;
  margin-left: 48rpx;
}

.form-btn.disabled {
  opacity: 0.4;
}