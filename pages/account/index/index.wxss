/* pages/account/index/index.wxss */

page {
  background: #f7f7f7;
}

.navbar {
  width: 750rpx;
  position: fixed;
  z-index: 90;
  overflow: hidden;
}

.navbar image {
  position: absolute;
  z-index: 91;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 352rpx;
}

.navbar text {
  position: relative;
  z-index: 92;
  width: 750rpx;
  text-align: center;
  color: #8E662F; 
  font-weight: 600;
  font-size: 36rpx;
  display: inline-block;
  height: 44px;
  line-height: 44px;
}

.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
}

.page-content {
  padding-bottom: 240rpx;
}

.page-content.iphone-x {
  padding-bottom: 360rpx;
}

.page-header {
  width: 750rpx;
  height: 464rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.page-header .header-background-container {
  position: relative;
  z-index: 1;
}

.page-header .header-background-container image {
  height: 352rpx;
  width: 750rpx;
  display: flex;
}

.page-header .header-content {
  height: 464rpx;
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.user-container {
  width: 750rpx;
  padding: 0 24rpx;
  padding-bottom: 36rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
}

.user-content {
  width: 100%;
  height: 100%;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}

.user-content .welcome-info .user-name{
  color: #ffffff;
  font-size: 36rpx;
  display: flex;
  font-weight: 500;
}

.user-content .welcome-info .user-name .name {
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
  /* margin-left: 20rpx; */
}

.user-content .welcome-info .mark {
  font-size: 24rpx;
  color: #ffffff;
}

.no-login {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.no-login .default-avatar {
  margin-right: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-login .default-avatar image {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  background: #ffffff;
}

.no-login .no-login-desc {
  display: flex;
  flex-direction: column;
}

.no-login .item-label {
  font-size: 44rpx;
  color: #ffffff;
}

.no-login .sub-item-label {
  font-size: 24rpx;
  color: #ffffff;
}

.user-content .avatar-container {
  height: 112rpx;
  width: 112rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #ffffff;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.user-content .avatar-container .avatar-image {
  height: 112rpx;
  width: 112rpx;
}

.page-header .account-info-container {
  flex-shrink: 0;
  width: 750rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  width: 702rpx;
  margin-left: 24rpx;
  height: 176rpx;
  border-radius: 4px;
  align-items: center;
}

.page-header .account-info-container .split {
  width: 2rpx;
  height: 48rpx;
  background: #d8d8d8;
}

.page-header .account-info-container .balance-container {
  width: 350rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.page-header .balance {
  font-size: 36rpx;
  font-weight: 500;
  color: #342F27;
}

.page-header .balance-desc {
  font-size: 28rpx;
  font-weight: 400;
  color: #5B5454;
  margin-top: 10rpx;
}

.page-header .account-info-container .coupon-container {
  width: 350rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.page-header .coupon {
  font-size: 36rpx;
  font-weight: 500;
  color: #342F27;
}

.page-header .coupon-desc {
  font-size: 28rpx;
  font-weight: 400;
  color: #5B5454;
  margin-top: 10rpx;
}

.action-container .icon-01{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  margin-bottom: 6rpx;
}

.action-container .icon-02{
  width: 52rpx;
  height: 52rpx;
  display: flex;
  margin-bottom: 6rpx;
}

.action-container {
  display: flex;
  flex-direction: column;
  width: 702prx;
  margin-left: 24rpx;
  margin-top: 40rpx;
  margin-bottom: 32rpx;
}

.action-container .label {
  font-size: 28rpx;
  color: #2B2424;
  margin-bottom: 32rpx;
}

.action-container .action-content {
  display: flex;
  width: 702rpx;
  justify-content: space-around;
}

.action-container .action-content .action-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-container .action-content .item-label {
  font-size: 24rpx;
  color: #5B5454;
}