/* pages/account/index/index.wxss */

/* -----------------------------------------------------version1.2--------------------------------------- */
page {
  background: rgba(216, 216, 216, 0.4);
}
.header{
  background-color: #fff;
  overflow: hidden;
}
.information{
  width: 702rpx;
  display: flex;
  margin: 0 auto;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.information .avatar{
  position: relative;
}
.information .avatar .avatar-container{
  width: 140.8rpx;
  height: 140.8rpx;
  border-radius: 50%;
  padding: 0;
}
.information .avatar .avatar-container image{
  width: 100%;
  height: 100%;
}
.information .avatar .pendant{
  position: absolute;
  width: 54rpx;
  height: 52.58rpx;
  top: -17rpx;
  left: -7rpx;
}
.information .phone{
  margin-left: 25.6rpx;
  display: flex;
  padding-top: 6rpx;
  flex-wrap: wrap;
  flex-direction: column;
}
.information .phone .phone_number{
  font-size: 40rpx;
  color: #332B2B;
  font-weight: 500;
  font-family: PingFangSC-Medium;
}
.information .phone .discount_head{
  position: relative;
  border-radius: 24rpx 24rpx 24rpx 0px;
  width: 248rpx;
  height: 68rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.information .phone .discount_head image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.information .phone .discount_head text{
  line-height: 1;
  padding: 0 22rpx;
  text-align: center;
  font-size: 28rpx;
  color: #662914;
  font-weight: 600;
  width: 100%;
  display: block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  position: relative;
  z-index: 1;
  margin-top: -4rpx;
  font-family: PingFangSC-Semibold;
}
.balance{
  width: 702rpx;
  margin: 20rpx auto 0;
  /* border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx; */
  padding: 15rpx 0 30rpx 50rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}
.balance .balance_bg{
  position: absolute;
  width: 100%;
  height: 192rpx;
  top: 0;
  left: 0;
}
.balance .balance_l{
  padding-top: 20rpx;
  position: relative;
}
.balance .balance_l .title{
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
  font-family: PingFangSC-Medium;
}
.balance .balance_l .number{
  font-size: 56rpx;
  color: #FFFFFF;
  line-height: 1;
  font-weight: 600;
  margin-top: 10rpx;
  font-family: PingFangSC-Semibold;
}
.balance .balance_r{
  display: flex;
  justify-content: flex-end;
  position: relative;
  padding-top: 10rpx;
}
.balance .balance_r .todetail{
  padding: 6rpx 18rpx 6rpx 36rpx;
  background: #CC0300;
  border-radius: 100rpx 0px 0px 100rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  height: 56rpx;
  line-height: 56rpx;
  font-family: PingFangSC-Semibold;
}
.order{
  width: 702rpx;
  background-color: #fff;
  padding: 0 36rpx;
  height: 228rpx;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  box-sizing: border-box;
  margin: 24rpx auto 0;
  border-radius: 12rpx;
}
.order .order_list{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.order .order_list.new{
  margin-right: 48rpx;
}
.order .order_list.shipping{
  margin-right: 30rpx;
}
.order .order_list.saleService{
  margin-right: 20rpx;
}
.order .order_list .count-icon{
  position: absolute;
  right: 0rpx;
  top: -10rpx;
  background: #FF3633;
  color: #ffffff;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx 18rpx 18rpx 0;
  padding: 4rpx 8rpx 0;
  min-width: 32rpx;
  box-sizing: border-box;
}
.order .order_list.new .count-icon{
  right: 0rpx;
  top: -10rpx;
}
.order .order_list text{
  font-size: 36rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 400;
  margin-top: 12rpx;
  font-family: PingFangSC-Regular;
}
.order_icon{
  width: 64rpx;
  height: 60rpx;
}
.order .division{
  width: 6rpx;
  height: 132rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-right: 22rpx;
}
.order .division .arrow{
  width: 6rpx;
  height: 6rpx;
  border-top: 1px solid #E6E6E6;
  border-right: 1px solid #E6E6E6;
  transform: rotate(45deg);
}
.order .division .line_top{
  width: 1px;
  flex: 1;
  background: linear-gradient(rgba(230,230,230,0),rgba(230,230,230,0.8),rgba(230,230,230,1));
}
.order .division .line_bottom{
  width: 1px;
  flex: 1;
  background: linear-gradient(rgba(230,230,230,1),rgba(230,230,230,0.8),rgba(230,230,230,0));
}
.discount{
  width: 702rpx;
  background-color: #fff;
  padding: 36rpx 24rpx;
  height: 246rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 24rpx auto 0;
  border-radius: 12rpx;
}
.discount .member{
  width: 316rpx;
  height: 172rpx;
  background: #FFF0F0;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  border-radius: 12px;
}
.discount .member .member_l{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.discount .member .member_l .top{
  font-size: 36rpx;
  color: #99201F;
  text-align: center;
  line-height: 1;
  font-weight: 500;
  margin-bottom: 5rpx;
  font-family: PingFangSC-Medium;
}
.discount .member .member_l .bottom{
  font-size: 28rpx;
  color: #99201F;
  line-height: 1;
  font-weight: 400;
  font-family: PingFangSC-Regular;
}
.discount .member .member_r {
  display: flex;
  align-items: center;
}
.discount .member .member_r .member_r_img{
  width: 88rpx;
  height: 82.7rpx;
}
.discount .member.coupons .member_r .member_r_img{
  width: 74rpx;
  height: 88rpx;
}
.menu{
  width: 702rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx 36rpx;
  box-sizing: border-box;
  margin: 24rpx auto;
}
.menu .list{
  padding: 47rpx 0;
  border-bottom: 1rpx solid rgba(230,230,230,1);
  display: flex;
  justify-content: space-between;
  align-items:  center;
}
.menu .list .text{
  font-size: 40rpx;
  color: #332B2B;
  line-height: 1;
  font-weight: 400;
  margin-left: 26.86rpx;
  font-family: PingFangSC-Regular;
}
.menu .list .img{
  width: 53.14rpx;
  height: 37.2rpx;
}
.menu .list .img1{
  width: 49.98rpx;
  height: 40rpx;
}
.menu .list .arrow{
  width: 46rpx;
  height: 46rpx;
}
.menu .list .arrow_box{
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.menu .list:last-child{
  border-bottom: none;
}
.cs{
  position: fixed;
  /* top: 600px; */
  right: 0;
  background: #FFFFFF;
  border: 1rpx solid rgba(238,235,232,1);
  box-shadow: 0px 4rpx 8rpx -4rpx rgba(245,245,245,1);
  border-radius: 200rpx 0px 0px 200rpx;
  padding: 20rpx 16rpx 22rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}
.cs .cs_img{
  width: 40rpx;
  height: 40rpx;
  margin-right:10rpx;
}
.cs text{
  color: #661614;
  text-align: justify;
  line-height: 1;
  font-weight: 400;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
}
