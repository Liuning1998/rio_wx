/* 头部订单状态 */
.state{
  width: 702rpx;
  margin: 0 auto 20rpx;
  background: #FFFFFF;
  border: 1rpx solid rgba(245,245,245,1);
  border-radius: 12rpx;
  padding: 36rpx 0 ;
}
.state .state-text{
  display: flex;
  justify-content: space-between;
  line-height: 1;
  padding: 0 44rpx;
  margin-bottom: 12rpx;
}
.state .state-text .text{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 500;
}
.state .state-icon{
  padding: 0 76rpx;
  display: flex;
  justify-content: space-between;
}
.state .state-icon .icon{
  display: flex;
  align-items: center;
}
.state .state-icon .icon::before{
  content: "";
  width: 124rpx;
  display: block;
  height: 4rpx;
  background-color: #FFAFAD;
}
.state .state-icon .icon:first-child::before{
  display: none;
}
.state .state-icon .icon .icon-round{
  width: 44rpx;
  height: 44rpx;
  border: 1rpx solid #FFAFAD;
  padding: 3.44rpx;
  display: flex;
  border-radius: 50%;
}
.state .state-icon .icon .icon-round view{
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  font-weight: 500;
  width: 100%;
  height: 100%;
  background-color: #FFAFAD;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.state .state-icon .icon.active::before{
  background-color: #FF3633;
}
.state .state-icon .icon.active .icon-round{
  border: 1rpx solid #FF3633;
}
.state .state-icon .icon.active .icon-round view{
  background-color: #FF3633;
}
/* 头部订单状态 */

