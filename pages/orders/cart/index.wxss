/* pages/orders/cart/index.wxss */

page {
  background: rgba(216, 216, 216, 0.4);
}

.hidden {
  display: none !important;
}

.main-container {
  width: 630rpx;
  margin: 120rpx auto 0 auto;
  background: #ffffff;
  border-radius: 10rpx;
  /* height: 340rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  box-sizing: border-box;
}

.page-content {
  /* padding-bottom: 100rpx; */
}

.top-actions {
  height: 64rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  background: #ffffff;
  z-index: 80;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.4);
}

.top-actions .info {
  font-size: 24rpx;
  color: #666666;
}

.top-actions view {
  height: 100%;
  min-width: 104rpx;
}

.top-actions .delete-all {
  font-size: 20rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.top-actions .delete-all image {
  height: 20rpx;
  width: 18rpx;
  display: flex;
  margin-right: 8rpx;
}

/* 空购物车 */
.cart-empty {
  font-size: 28rpx;
  color: #333333;
  width: 700rpx;
  height: 408rpx;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 16rpx auto 0;
}

.cart-empty image {
  height: 156rpx;
  width: 184rpx;
  margin-bottom: 20rpx;
}
/* 空购物车 */

/* 购物车信息 */
.store-cart-container {
  background: #f7f7f7;
  border-radius: 8rpx;
  width: 700rpx;
  margin: 16rpx auto;
}

.cart-container .store-header {
  display: flex;
  height: 72rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.cart-container .select {
  height: 24rpx;
  width: 24rpx;
  border: 1px solid #979797;
  border-radius: 50%;
  margin: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  box-sizing: border-box;
  position: relative;
}

.cart-container .select::before {
    content: '';
    position: absolute;
    top: -40rpx;
    right: -30rpx;
    bottom: -40rpx;
    left: -20rpx;
}

.cart-container .select.selected {
  height: 28rpx;
  width: 28rpx;
  margin: 22rpx;
  border-color: #F64C47;
  background: #F64C47;
}

.cart-container .select.selected image {
  display: flex;
}

.cart-container .select image {
  height: 28rpx;
  width: 28rpx;
  display: none;
}

.cart-container .store-icon {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.cart-container .store-header .delete {
  /* width: 34rpx;
  height: 34rpx; */
  font-size: 20rpx;
  color: #999999;
  margin: 24rpx;
}

.cart-container .line-item-container {
  position: relative;
  overflow: hidden;
}

.cart-container .line-item-content {
  display: flex;
  align-items: center;
  padding-top: 24rpx;
  background: #ffffff;
  z-index: 7;
  position: relative;
  width: 700rpx;
}

.line-item-container .bg-action {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 6;
  height: 100%;
}

.line-item-container .delete-line-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFF6E6;
  color: #8E662F;
  width: 122rpx;
  justify-content: center;
  height: 100%;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  font-size: 20rpx;
}

.weui-slideview__btn-group_warn .weui-slideview__btn {
  background-color: #FF524E;
  color: #ffffff;
  font-size: 20rpx;
}

.line-item-container .delete-line-item image {
  height: 26rpx;
  width: 30rpx;
  margin-bottom: 8rpx;
}

.cart-container .line-item-content:last-child {
  padding-bottom: 24rpx;
}

.cart-container .avatar {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.cart-container .line-item-info {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
}

.cart-container .name {
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
}

.cart-container .variant-info {
  font-size: 24rpx;
  color: #999999;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
}

.cart-container .price-and-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8srpx;
}

.cart-container .price {
  font-size: 36rpx;
  color: #F64C47;
}

.cart-container .price .origin-price {
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
  /* font-weight: 600; */
  margin-left: 8rpx;
}

