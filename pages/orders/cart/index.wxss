/* 商品列表 */
.products-container {
  width: 700rpx;
  margin: auto;
  margin-top: 24rpx;
}

.split-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 44rpx 0;
}

.split-container .line {
  height: 1px;
  width: 96rpx;
  background: #2B2424;
}

.split-container .label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #2B2424;
  margin: 0 28rpx;
}

.split-container .label image {
  width: 52rpx;
  height: 40rpx;
}

.split-container .label image:last-child {
  transform: rotateY(180deg);
}

.product-list-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 24rpx;
}

.product-list-container .item-container {
  display: flex;
  flex-direction: column;
  width: 340rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.product-list-container .avatar-container {
  width: 340rpx;
  height: 340rpx;
  position: relative;
}

.product-list-container .avatar {
  height: 340rpx;
  width: 340rpx;
  display: flex;
}

.product-list-container .coupon-description {
  background: #ECD2A4;
  border-radius: 8rpx 8rpx 8rpx 0;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 3;
  height: 42rpx;
  min-width: 214rpx;
  /* 7 个汉字 */
  max-width: 240rpx;
  /* justify-content: center; */
  align-items: center;
  color: #8E662F;
  font-size: 24rpx;
  overflow: hidden;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.product-list-container .coupon-description image {
  width: 38rpx;
  height: 26rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  display: flex;
}

.product-list-container .name {
  width: 340rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: #333333;
  margin-top: 20rpx;
  flex: 1;
}

.product-list-container .bottom-info-container {
  display: flex;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  justify-content: space-between;
  align-items: flex-end;
}

.product-list-container .info-content {
  display: flex;
  flex-direction: column;
}

.product-list-container .badges text {
  height: 30rpx;
  font-size: 20rpx;
  color: #D3B17D;
  border: 1px solid #D3B17D;
  box-sizing: border-box;
  padding: 0 16rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.product-list-container .badges text:last-child {
  margin-right: 0;
}

.product-list-container .cart-icon {
  height: 48rpx;
  width: 48rpx;
  border-radius: 28rpx;
  background: rgba(216, 216, 216, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.product-list-container .cart-icon .go-product {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #999999;
  margin-left: 4rpx;
}

.product-list-container .cart-icon .go-product image {
  width: 12rpx;
  height: 14rpx;
  display: flex;
  margin-left: 2rpx;
}

.product-list-container .cart-icon image {
  display: flex;
  width: 22rpx;
  height: 22rpx;
}

.product-list-container .price {
  position: relative;
  left: -4rpx;
}

.product-list-container .price text {
  font-size: 28rpx;
  color: #F64C47;
}

.product-list-container text.origin-price{
  font-size: 18rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 8rpx;
}
/* 商品列表 */