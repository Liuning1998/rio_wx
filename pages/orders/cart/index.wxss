.control-quantity {
  display: flex;
  /* justify-content: left; */
  justify-content: flex-end;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.control-quantity .quantity {
  text-align: center;
  font-size: 28rpx;
  color: #2B2424 ;
  height: 50rpx;
  line-height: 50rpx;
  min-width: 60rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  /* background: #eeeeee; */
  margin: 0 2rpx;
}

.control-quantity .sub, .control-quantity .plus {
  background: #F64C47;
  width: 40rpx;
  height: 40rpx;
  line-height: 48rpx;
  font-size: 44rpx;
  border-radius: 50%;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
  box-sizing: border-box;
  padding-bottom: 8rpx;
  box-sizing: border-box;
  border: 1px solid #F64C47;
}

.control-quantity .sub {
  font-size: 32rpx;
  padding-top: 8rpx;
}

