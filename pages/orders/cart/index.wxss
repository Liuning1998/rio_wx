/* 领取优惠券 */
.coupon{
  width: 700rpx;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 26rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  margin: 16rpx auto 0;
  z-index: 199;
}
.coupon .coupon-l{
  display: flex;
  max-width: 500rpx;
  align-items: center;
}
.coupon .coupon-l .coupon-mark{
  background-image: linear-gradient(137deg, #F8F4DD 0%, #FFD88F 100%);
  border-radius: 6rpx;
  display: flex;
  padding: 0 6rpx;
  align-items: center;
  height: 36rpx;
  line-height: 36rpx;
  margin-right: 12rpx;
}
.coupon .coupon-l .coupon-mark image{
  width: 22rpx;
  height: 28rpx;
  margin-right: 4rpx;
}
.coupon .coupon-l .coupon-mark text{
  font-size: 24rpx;
  color: #6D310D;
}
.coupon .coupon-l .coupon-l-text{
  font-size: 28rpx;
  color: #2B2424;
}
.coupon .coupon-r{
  display: flex;
  background-image: linear-gradient(135deg, #FF4844 0%, #FF524E 17%, #FA0200 100%);
  border-radius: 18rpx;
  height: 36rpx;
  line-height: 36rpx;
  justify-content: center;
  align-items: center;
  padding: 0 14rpx;
}
.coupon .coupon-r text{
  font-size: 20rpx;
  color: #fff;
}
.coupon .coupon-r image{
  width: 7.2rpx;
  height: 16rpx;
  transform: rotate(180deg);
  margin-left: 6.8rpx;
}
.hove-btn{
  opacity: .8;
}

/* 优惠券弹窗 */
.coupon-p{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
.coupon-p .coupon-mask{
  position: absolute;
  top: 0;
  height: 0;
  background-color: rgba(0,0,0,.4);
  width: 100%;
  height: 100%;
}
.coupon-p .popup{
  width: 100%;
  height: 75vh;
  background-color: #fff;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.coupon-p .popup .popup-title{
  width: 100%;
  line-height: 108rpx;
  height: 108rpx;
  text-align: center;
  font-size: 32rpx;
  color: #2B2424;
  position: relative;
}
.coupon-p .popup .popup-title .close{
  position: absolute;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #2B2424;
  height: 44rpx;
  width: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #2B2424;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.coupon-p .popup .popup-title .close image{
  width: 9.2rpx;
  height: 17.8rpx;
  display: inline-block;
}
.coupon-p .popup .popup-title .close image:first-child{
  transform: rotate(180deg);
  position: relative;
  left: 1rpx;
}
.coupon-p .popup .popup-title .close image:last-child{
  position: relative;
  right: 1rpx;
}
.coupon-p .popup-brief{
  border-top:2rpx solid #F7F7F7;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
  color:  #B4AFAF;
  padding: 0 26rpx;
}
.coupon-p .pupup-scroll{
  width: 100%;
  height: calc(100% - 405rpx);
  background: #F7F7F7;
  /* padding-bottom: 232rpx; */
  box-sizing: border-box;
}
.coupon-p .popup-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 64rpx 0;
  border-top: 2rpx solid #F7F7F7;
  display: flex;
  justify-content: center;
}
.coupon-p .popup-btn view{
  width: 654rpx;
  height: 84rpx;
  display: inline-block;
  background-image: linear-gradient(118deg, #FF524E 0%, #FB2C2A 100%);
