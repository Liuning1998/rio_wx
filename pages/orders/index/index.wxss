.products .product-item .product-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
  height: min-content;
  margin-right: 40rpx;
  /* display: flex; */
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  font-weight: 400;
  line-height: 44rpx;
}

.products .product-item .product-name  .pre_name{
  color: #FF3633;
}

.total-container {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  line-height: 1;
  height: 112rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E6E6E6;
  box-sizing: border-box;
}

.total-container .label {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 400;
  margin-right: 24rpx;
  margin-top: 8rpx;
}

.total-container .price{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 400;
}

.total-container .price .icon{
  font-size: 28rpx;
  color: #FF3633;
  margin: 0rpx 6rpx;
}

.total-container .price .money{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  font-weight: 500;
  color: #FF3633;
}

.actions {
  padding: 36rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  /* padding: 20rpx 0; */
}

.actions .btn:last-child{
  margin-right: 0;
}

.delete-btn, .cancel-btn {
  height: 72rpx;
  width: 216rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(128,116,116,.5);
  border-radius: 54rpx;
  text-align: center;
  line-height: 72rpx;
  margin-right: 12rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #332B2B;
  font-weight: 500;
}

.buy-btn {
  height: 72rpx;
  width: 216rpx;
  box-sizing: border-box;
  border: 1rpx solid #FF3633;
  border-radius: 54rpx;
  color: #FF3633;
  text-align: center;
  font-family: PingFangSC-Medium;
  line-height: 72rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.pay-btn {
  height: 72rpx;
  width: 216rpx;
  box-sizing: border-box;
  /* border: 1rpx solid #ce343c; */
  border-radius: 54rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 32rpx;
  background-image: linear-gradient(90deg, #FF3633 0%, #FB2C2A 100%);
  color: #ffffff;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.delete image {
  height: 24rpx;
  margin: 10rpx 30rpx;
  margin-left: 0;
  display: flex;
  align-items: center;
}
