/* 催发货弹窗 */
.urge-popup{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
.urge-popup .urge-mask {
  position: absolute;
  top: 0;
  height: 0;
  background-color: rgba(0,0,0,.4);
  width: 100%;
  height: 100%;
}
.urge-popup .popup {
  width: 100%;
  height: 604rpx;
  background-color: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.urge-popup .popup .title{
  display: flex;
  justify-content: flex-end;
  padding: 25rpx 36rpx;
  align-items: center;
}
.urge-popup .popup .title .close{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.urge-popup .popup .title .close image{
  width: 28rpx;
  height: 28rpx;
}
.urge-popup .popup .content{
  flex-grow: 1;
}
.urge-popup .popup .content .urge-result{
  width: 168rpx;
  height: 168rpx;
  margin: auto;
  display: block;
}
.urge-popup .popup .content .tip{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
  text-align: center;
  margin-top: 40rpx;
}
.urge-popup .popup .content .tip-two{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  text-align: center;
}
.urge-popup .popup .urge-btn{
  background: #FFFFFF;
  box-shadow: 0 0 2rpx 0 #E5E5E5;
  padding: 14rpx 22rpx;
  display: flex;
  justify-content: space-between;
}
.urge-popup .popup .urge-btn .btn{
  width: 341rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  box-sizing: border-box;
  border-radius: 54rpx;
}
.urge-popup .popup .urge-btn .btn.hyaline{
  border: 2rpx solid #E6E6E6;
  background-color: #fff;
  color: #332B2B;
}
.urge-popup .popup .urge-btn .btn.opaque{
  background-image: linear-gradient(123deg, #FF511E 0%, #FC1000 100%);
  color: #fff;
}