/* pages/orders/index/index.wxss */
page {
  background: #f7f7f7;
}

.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
}

.page-content {
  padding-bottom: 80rpx;
}

.page-content.iphone-x {
  padding-bottom: 120rpx;
}

/* tab-header */
.tab-header {
  width: 750rpx;
  font-size: 30rpx;
  color: #666666;
  position: fixed;
  display: flex;
  justify-content: space-around;
  left: 0;
  top: 0;
  z-index: 999;
  background: #ffffff;
}

.tab-header .tab-item {
  height: 85rpx;
  line-height: 85rpx;
  box-sizing: border-box;
  
  /* border-bottom: 3rpx solid rgba(0, 0, 0, 0); */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.tab-header .tab-item text {
  padding: 0 4rpx;
  margin: 0 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 400;
  line-height: 80rpx;
}

.tab-header .tab-item .border{
  width: 64rpx;
  height: 8rpx;
  background: rgba(0, 0, 0, 0);
  display: flex;
  flex-shrink: 0;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.tab-header .tab-item.active {
  color: #333333;
}

.tab-header .tab-item.active text{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
  text-align: center;
  font-weight: 500;
}

.tab-header .tab-item.active .border{
  /* border-bottom: 3rpx solid #e23c42; */
  background-image: linear-gradient(90deg, #D94B52 0%, #FF9F8C 100%);
}
/* tab-header */

/* 订单列表 */
.orders-container {
  margin-top: 108rpx;
}

.order-item-container {
  border: 0.5rpx solid rgba(238,235,232,1);
  border-radius: 12rpx;
  background-color: #fff;
  width: 750rpx;
  margin: 24rpx 0 0 0;
  box-sizing: border-box;
  padding: 0 30rpx 0;
}

.order-status {
  position: relative;
  font-size: 36rpx;
  color: #FF3633;
  display: flex;
  font-family: PingFangSC-Regular;
  align-items: center;
  justify-content: space-between;
  min-height: 120rpx;
  border-bottom: 1rpx solid #E6E6E6;
  line-height: 1;
  box-sizing: border-box;
}

.order-status .name-container {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  font-weight: 400;
}

.order-status.completed {
  color: #666666;
}

.order-status image {
  height: 80rpx;
  position: absolute;
  right: 0rpx;
  top: 0;
  z-index: 9;
}

.products {
  width: 100%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #E6E6E6;
}

.products .product-item {
  display: flex;
  align-items: flex-start;
}
.products .product-item.avatar-box{
  align-items: center;
}

.products .product-item .avatar {
  height: 168rpx;
  width: 168rpx;
  flex-shrink: 0;
  margin-right: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.products .product-item .price-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
}

.products .product-item .price-container .price{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
  font-weight: 500;
  line-height: 44rpx;
}

.products .product-item .price-container .quantity{
  line-height: 30rpx;
}

.products .product-item .price-container .price text{
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  margin-right: 6rpx;
}

.products .product-item .quantity-container{
  width: 48.02rpx;
  display: flex;
  justify-content: space-between;
}

.products .product-item .quantity-container text {
  width: 9.48rpx;
  height: 9.48rpx;
  background: #CCBFBF;
  border-radius: 50%;
}

