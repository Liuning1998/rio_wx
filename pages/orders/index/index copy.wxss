.products .product-item .price {
  font-size: 32rpx;
  color: #333333;
  text-align: right;
  flex-shrink: 0;
}

.products .product-item .product-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  margin-right: 40rpx;
}

.products .product-item .product-name  .pre_name{
  color: #F64C47;
}

.products .product-item .go-detail {
  height: 20rpx;
  width: 10rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.total-container {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 24rpx;
}

.total-container .label {
  font-size: 24rpx;
  color: #2B2424;
  margin-right: 16rpx;
}

.total-container .price-int {
  font-size: 28rpx;
  color: #2B2424;
  font-weight: 500;
  margin-right: 2rpx;
}

.total-container .price-int::before {
  content: '￥';
  font-size: 20rpx;
  color: #2B2424;
}

.total-container .price-decimal {
  font-size: 20rpx;
  color: #2B2424;
  font-weight: 400;
  position: relative;
  top: 3rpx;
}

.total-container .price-decimal::before {
  content: '.';
}

.actions {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  border-top: 1rpx solid #f7f7f7;
  /* padding: 20rpx 0; */
}

.delete-btn, .cancel-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid #999999;
  border-radius: 30rpx;
  color: #999999;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.buy-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid #F64C47;
  border-radius: 30rpx;
  color: #F64C47;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
}

.pay-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid #ce343c; */
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  background: linear-gradient(90deg, #FF524E 0%, #FB2C2A 100%);
  color: #ffffff;
}

.delete image {
  height: 24rpx;
  margin: 10rpx 30rpx;
  margin-left: 0;
  display: flex;
  align-items: center;
}
/* 订单列表 */


/* 空白 */
.order-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 260rpx;
}

.order-empty image {
  width: 480rpx;
  height: 244rpx;
}

.order-empty .title {
  font-size: 28rpx;
  color: #2B2424;
  margin-top: 44rpx;
  text-align: center;
}

.goto-home {
  height: 72rpx;
  width: 250rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 36rpx;
  background: linear-gradient(90deg, #FF524E 0%, #FB2C2A 100%);
  font-size: 36rpx;
  color: #ffffff;
  padding: 0;
  position: relative;
  margin-top: 80rpx;
}
/* 空白 */

.loading-icon {
  position: fixed;
  z-index: 90;
  width: 90rpx;
  height: 50rpx;
  left: 310rpx;
  margin-top: 20rpx;
}

/* 支付时间 */
.pay-time-container {
  flex: 1;
}

.pay-time-container .label {
  color: #B4AFAF;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.pay-time-container .time {
  font-size: 24rpx;
  color: #F64C47;
}
/* 支付时间 */

.hidden {
  display: none;
