/* pages/orders/expresses/show.wxss */
page {
  background-color: #f7f7f7;
}

.page-container {
  padding-bottom: 100rpx;
}

.express-info-container {
  width: 670rpx;
  margin: auto;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx;
}

.express-info-container .express-icon {
  height: 132rpx;
  width: 132rpx;
  flex-shrink: 0;
}

.express-info-container .express-info-content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.express-info-container .express-info-content .state-label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 600;
}

.express-info-container .express-info-content .state {
  color: #C58513;
  font-size: 28rpx;
  font-weight: 600;
}

.express-info-container .express-info-content .company, .express-info-container .express-info-content .number {
  font-size: 24rpx;
  color: #999999;
  text-align: justify;
  margin-top: 3rpx;
}

.express-list {
  display: flex;
  flex-direction: column;
  width: 670rpx;
  margin: 20rpx auto 60rpx;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx 40rpx 24rpx 0;
  box-sizing: border-box;
  min-height: 400rpx;
}

.express-list .item-container {
  display: flex;
  align-items: center;
  position: relative;
}

.express-list .time-line-container {
  width: 70rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  position: absolute;
  top: 6rpx;
}

.express-list .time-line-container .dot {
  background: #ECECEC;
  height: 14rpx;
  width: 14rpx;
  margin-bottom: 4rpx;
  margin-top: 4rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.express-list .time-line-container .line {
  width: 1px;
  background: #F7F7F7;
  min-height: 40rpx;
  flex: 1;
}

.express-list .time-line-container .line-icon {
  width: 26rpx;
  height: 36rpx;
  display: flex;
  margin-bottom: 4rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.express-list .detail-container {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  margin-left: 70rpx;
}

.express-list .item-container:last-child .detail-container {
  margin-bottom: 0;
}

.express-list .detail-container .context {
  font-size: 24rpx;
  color: #999999;
  text-align: justify;
}

.express-list .item-container:first-child .detail-container .context {
  font-size: 24rpx;
  color: #666666;
  text-align: justify;
}

.express-list .detail-container .time {
  font-size: 24rpx;
  color: #999999;
}

.express-list .item-container:first-child .detail-container .time {
  font-size: 24rpx;
  color: #666666;
}