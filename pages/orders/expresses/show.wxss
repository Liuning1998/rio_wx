/* pages/orders/expresses/show.wxss */
page {
  background-color: #f7f7f7;
}

.page-container {
  padding-bottom: 100rpx;
}

.express-info-container {
  width: 750rpx;
  margin: auto;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 0 0 12rpx 12rpx;
  display: flex;
  align-items: flex-start;
  padding: 44rpx 36rpx 8rpx;
  flex-direction: column;
  border: 1rpx solid #EEEBE8;
}

.express-info-container .item{
  margin-bottom: 32rpx;
  display: flex;
}

.express-info-container .item view{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
}

.express-info-container .item .name{
  margin-right: 24rpx;
  flex: none;
}
.express-info-container .item .info{
  word-break: break-all;
}

.express-info-container .item .state{
  color: #FF3633;
}

.express-list {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  margin: 24rpx auto 60rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  min-height: 400rpx;
  border: 1rpx solid #EEEBE8
}

.express-list .title{
  border-bottom: 1rpx solid #E6E6E6;
  height: 124rpx;
  display: flex;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
  padding: 0 12rpx;
  margin-bottom: 48rpx;
}

.express-list .item-container {
  display: flex;
  align-items: center;
  position: relative;
  padding-right: 36rpx;
}

.express-list .time-line-container {
  width: 36rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  position: absolute;
  top: 6rpx;
}

.express-list .time-line-container .dot {
  background: #E6E6E6;
  height: 24rpx;
  width: 24rpx;
  border-radius: 50%;
  box-sizing: border-box;
  flex-shrink: 0;
}

.express-list .time-line-container .line {
  width: 1px;
  background: #E6E6E6;
  min-height: 40rpx;
  flex: 1;
}

.express-list .time-line-container .dot.active {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  margin-bottom: 4rpx;
  margin-top: 4rpx;
  background-color: #FFD7D6;
  padding: 6rpx;
  border-radius: 50%;
  box-sizing: border-box;
}

.express-list .time-line-container .dot.active text{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #FF3633;
}

.express-list .detail-container {
  margin-bottom: 88rpx;
  display: flex;
  flex-direction: column;
  margin-left: 70rpx;
}

.express-list .item-container:last-child .time-line-container .line {
  display: none;
}

.express-list .detail-container .context {
  text-align: justify;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  margin-bottom: 32rpx;
}

.express-list .item-container .detail-container.active .context {
  color: #FF3633;
  font-family: PingFangSC-Medium;
}

.express-list .detail-container .time {
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #332B2B;
  line-height: 18px;
}