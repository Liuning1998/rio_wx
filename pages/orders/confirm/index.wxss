/* pages/products/buy/index.wxss */
page {
  background: #f7f7f7;
}

.hide {
  display: none !important;
}

.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
  padding-bottom: 174rpx;
  box-sizing: border-box;
}

.page-content {
  display: flex;
  flex-direction: column;
  position: relative;
}

.main-container {
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 240rpx;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.time-remark {
  background: rgba(250,225,222,0.80);
