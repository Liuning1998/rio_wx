/* pages/products/buy/index.wxss */
page {
  background: #f7f7f7;
}
.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
  padding-bottom: 174rpx;
  box-sizing: border-box;
}

.page-content {
  display: flex;
  flex-direction: column;
  position: relative;
}

.main-container {
  margin-top: 40rpx;
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 240rpx;
  padding: 0 40rpx;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.page-background {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background: linear-gradient(90deg, #FF524E 0%, #FB2C2A 100%);
  width: 750rpx;
  height: 284rpx;  
}

.select-address-empty {
  display: flex;
  width: 670rpx;
  height: 104rpx;
  border-radius: 8rpx;
  background: #ffffff;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.select-address-empty text {
  color: #333333;
  font-size: 32rpx;
  flex: 1;
}

.select-address-empty .location {
  width: 36rpx;
  height: 38rpx;
  margin-right: 8rpx;
}

.select-address-empty .arrow, .select-address-container .arrow {
  height: 24rpx;
  width: 12rpx;
  transform: rotate(180deg);
  flex-shrink: 0;
}

.select-address-container {
  display: flex;
  flex-direction: column;
  width: 670rpx;
  border-radius: 8rpx;
  background: #ffffff;
  align-items: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.select-address-container .user-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.select-address-container .user-info .user-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  max-width: 400rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}

.select-address-container .user-info .phone {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.select-address-container .address-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
  width: 100%;
}

.select-address-container .address-info {
  padding-right: 40rpx;
  box-sizing: border-box;
  text-align: justify;
}

.select-address-container .default-address {
  background: #D3B17D;
  color: #ffffff;
  font-size: 20rpx;
  width: 56rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  display: inline-block;
  border-radius: 2rpx;
  margin-bottom: 4rpx;
  margin-right: 8rpx;
  position: relative;
  top: -2rpx;
}

.page-content.iphone-x {
  margin-bottom: 360rpx;
}

.content-title {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  background: #ffffff;
  font-size: 28rpx;
  color: #333333;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.split-image {
  width: 100%;
  display: flex;
}

/* 商品列表 */
.products {
  padding: 14rpx 20rpx;
  box-sizing: border-box;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

.products .avatar {
  height: 160rpx;
  /* width: 250rpx; */
  flex-shrink: 0;
  margin-right: 12rpx;
}

.products .product-item {
  display: flex;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #f3f3f3;
  margin-bottom: 24rpx;
}

.products .product-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.products .product-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 160rpx;
  justify-content: space-between;
}

.products .name-quantity {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.products .name {
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  max-height: 80rpx;
  width: 260rpx;

  display: -webkit-box;
	white-space: normal !important;
	-webkit-line-clamp: 2;
  line-clamp: 2;
	-webkit-box-orient: vertical;
}

.products .variant-desc {
  font-size: 24rpx;
  color: #666666;
}

.products .variant-price {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  flex-shrink: 0;
  align-items: flex-end;
}

.products .quantity {
  font-size: 24rpx;
  color: #888888;
}

.products .price-container {
  display: flex;
  flex-direction: column;
}

.products .price {
  font-size: 28rpx;
  color: #666666;
  line-height: 32rpx;
}

.products .origin-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  line-height: 32rpx;
}
/* 商品列表 */

.split-container {
  width: 100%;
  background: #ffffff;
}

/* 费用说明 */
.products .expenses {
  width: 100%;
}

.expenses {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.expenses .product-expenses {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.expenses .product-expenses .label {
  font-size: 28rpx;
  color: #666666;
}

.expenses .product-expenses .total-container {
  display: flex;
  flex-direction: column;
}

.expenses .product-expenses .total-container .origin-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

.amount {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.amount .total-container {
  display: flex;
  flex-direction: column;
}

.amount .origin-price {
  font-weight: 400;
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

.amount .price {
  font-weight: bold;
}
/* 费用说明 */

/* 换购码 */
.secret-container {
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
}

.secret-container input {
  display: inline-block;
  margin-left: 30rpx;
  flex: 1;
  background: #f5f5f5;
  display: inline-block;
  padding: 16rpx 20rpx;
}
/* 换购码 */

/* 底部按钮 */
.bottom-tools {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  background-color: white;
  position: fixed;
  z-index: 199;
  bottom: 0;
  left: 0;
  width: 100%;
  /* border-top: 1rpx solid #f7f7f7; */
  padding: 0;
  box-sizing: border-box;
}

.btn-container {
  height: 108rpx;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.pay-btn {
  /* margin-top: 16rpx; */
  height: 72rpx;
  width: 400rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 36rpx;
  background: linear-gradient(90deg, #FF524E 0%, #FB2C2A 100%);
  font-size: 32rpx;
  color: #ffffff;
  padding: 0;
  position: relative;
  /* box-shadow: 0 50rpx 30rpx #F45C4330; */
}

.btn.pay-btn.disable {
  background: #aaaaaa;
  color: #ffffff;
}

.bottom-tools.iphone-x {
  padding-bottom: 68rpx;
  height: 168rpx;
}
/* 底部按钮 */

.protocol {
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  display: flex;
  line-height: 44rpx;
  flex-shrink: 0;
}

.protocol-item {
  color: #AD9464;
}

.protocol .checkbox {
  height: 34rpx;
  width: 34rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin-top: 4rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  border: 1rpx solid #E0E0E0;
  flex-shrink: 0;
}

.protocol .checkbox image {
  display: none;
}

.protocol .checkbox.active {
  border: 1rpx solid #E0E0E0;
  background: #ffffff;
}

.protocol .checkbox.active image {
  display: inline-block;
  width: 24rpx;
  height: 20rpx;
}

.time-remark {
  font-size: 28rpx;
  color: #EB857C;
  position: absolute;
  z-index: 199;
  width: 750rpx;
  height: 64rpx;
  left: 0;
  top: -64rpx;
  background: rgba(250,225,222,0.80);
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-remark image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
}