/* 地址 */
.select-address-container .address-icon, .select-address-empty .location {
  height: 32rpx;
  width: 32rpx;
  display: flex;
  flex-shrink: 0;
  padding: 0 24rpx;
}

.select-address-container .arrow, .select-address-empty .arrow {
  width: 12rpx;
  height: 26rpx;
  transform: rotate(180deg);
  flex-shrink: 0;
  padding: 0 20rpx;
}

.split-line {
  height: 8rpx;
  width: 750rpx;
}

.select-address-container, .select-address-empty {
  display: flex;
  width: 750rpx;
  box-sizing: border-box;
  padding: 28rpx 0;
  align-items: center;
  background: #ffffff;
}

.select-address-empty text {
  display: flex;
  flex: 1;
  font-size: 28rpx;
  color: #2B2424;
  font-weight: 500;
}

.select-address-container .address-content {
  min-height: 76rpx;
  flex: 1;
}

.select-address-container .user-info {
  display: flex;
  align-items: center;
}

.select-address-container .user-name {
  color: #2B2424;
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 32rpx;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
