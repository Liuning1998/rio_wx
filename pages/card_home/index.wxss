/* products/pages/index/index.wxss */
page {
  background: #f7f7f7;
  height: 100%;
}

.navbar {
  position: fixed;
  /* top: 0; */
  left: 0;
  width: 750rpx;
  z-index: 90;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.navbar .background-image {
  position: absolute;
  left: 0;
  top: 0;
  height: 988rpx;
  width: 750rpx;
}

.navbar .navbar-content {
  width: 750rpx;
  height: 44px;
  position: relative;
}

.navbar .navbar-content.light {
  background: #ffffff;
  display: flex;
  width: 750rpx;
  justify-content: center;
  align-items: flex-end;
  border-bottom: 1px solid #f7f7f7;
}

.navbar .navbar-content.light .title {
  font-size: 36rpx;
  color: #333333;
  height: 44px;
  line-height: 44px;
}

.return-image-container {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  padding-left: 30rpx;
  padding-right: 60rpx;
  z-index: 92;
}

.return-image {
  height: 32rpx;
  width: 18rpx;
}

.ad-image {
  width: 750rpx;
  height: 988rpx;
}

.products-container {
  /* padding-top: 88rpx; */
  padding-bottom: 100rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  /* position: relative; */
  /* z-index: 3; */
  /* top: -166rpx; */
}


.products-container .product-item {
  display: flex;
  padding: 24rpx;
  box-sizing: border-box;
  margin: auto;
  margin-bottom: 14rpx;
  width: 702rpx;
  border-radius: 8rpx;
  background: #ffffff;
}

.products-container .avatar-container {
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
  position: relative;
  /* overflow: hidden; */
}

.products-container .avatar-container .sale-out-container {
  position: absolute;
  z-index: 4;
  left: 0;
  top: 0;
  width: 224rpx;
  height: 224rpx;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.products-container .avatar-container .sale-out-content {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  flex-direction: column;
  color: #dddddd;
  border-radius: 50%;
  padding: 14rpx;
}

.products-container .avatar-container .sale-out-content .line {
  display: flex;
  height: 1px;
  width: 120rpx;
  background: #dddddd;
  margin: 8rpx 0;
}

.products-container .avatar-container .sale-out-content .cn {
  font-size: 32rpx;
}

.products-container .avatar-container .sale-out-content .en {
  font-size: 22rpx;
}

.products-container .sort-badge {
  position: absolute;
  top: -12rpx;
  left: -12rpx;
  z-index: 3;
  width: 44rpx;
  height: 60rpx;
}

.products-container .avatar {
  width: 224rpx;
  height: 224rpx;
  display: flex;
  border-radius: 8rpx;
}

.products-container .item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.products-container .name {
  font-size: 28rpx;
  line-height: 36rpx;
  margin-top: 18rpx;
  font-weight: 600;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
}

.products-container .description {
  font-size: 24rpx;
  color: #D3B17D;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
}

.products-container .stock {
  font-size: 24rpx;
  color: #999999;
}

.product-item .price-and-cart {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.product-item .price {
  font-size: 44rpx;
  color: #E76156;
  line-height: 44rpx;
  font-weight: 500;
}

.product-item .price::before {
  content: '￥';
  font-size: 24rpx;
  font-weight: 400;
}

.product-item .origin-price {
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
}

.product-item .origin-price text {
  text-decoration: line-through;
}

.product-item .cart-container {
  flex-shrink: 0;
  height: 56rpx;
  width: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(216, 216, 216, 0.5);
  border-radius: 50%;
}

.product-item .cart-container image {
  height: 22rpx;
  width: 26rpx;
}

.product-item .cart-container .go-product {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #999999;
  margin-left: 4rpx;
}

.product-item .cart-container .go-product image {
  width: 12rpx;
  height: 14rpx;
  display: flex;
  margin-left: 2rpx;
}

/* 空列表样式 */

.product-empty image {
  margin-top: 230rpx;
}

/* 空列表样式 */

.loading-icon {
  position: fixed;
  z-index: 90;
  width: 90rpx;
  height: 50rpx;
  left: 328rpx;
  margin-top: 20rpx;
}

.hidden {
  display: none;
  /* animation: viewlinear 2s linear infinite; */
}

.rule-explain {
  height: 100rpx;
  position: fixed;
  right: 0;
  bottom: 260rpx;
  z-index: 80;
}

/* float notice */
.float-notice-container {
  position: fixed;
  z-index: 89;
  background: #FFF2E5;
  width: 750rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.float-notice-container .image-container {
  /* width: 126rpx; */
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
}

.float-notice-container .image-container image {
  height: 64rpx;
  width: 64rpx;
  margin: 0 10rpx;
  /* margin-right: 10rpx; */
}

.float-notice-container .line {
  height: 54rpx;
  width: 2rpx;
  background: linear-gradient(to bottom, #EDDCAD00, #EDDCAD, #EDDCAD00);
  flex-shrink: 0;
}

.scroll-container {
  position: relative;
  width: 664rpx;
  display: flex;
  /* padding: 0 14rpx; */
}

.scroll-content {
  display: flex;
  position: relative;
  overflow: hidden;
}

.float-notice-content {
  position: relative;
  display: flex;
}

.float-notice-content text {
  display: flex;
  flex-shrink: 0;
  /* width: 626rpx; */
  color: #6C5641;
  font-size: 24rpx;
  white-space: nowrap;
  padding-left: 14rpx;
  padding-right: 160rpx;
}
