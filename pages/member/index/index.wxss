/* pages/member/index/index.wxss */
page{
  background-color: #f7f7f7;
}
.navbar-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 992;
  width: 100%;
  transition: all .3s;
}
.navbar-content {
  width: 100%;
  height: 44px;
  line-height: 44px;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}
.return-image-container {
    position: absolute;
    left: 0;
    top: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 44px;
    padding-left: 30rpx;
    padding-right: 60rpx;
    z-index: 92;
}
.return-image {
  height: 32rpx;
  width: 18rpx;
}
.navbar-content .navbar-title {
    font-size: 36rpx;
    font-weight: 600;
    height: 44px;
    line-height: 44px;
    color: #ffffff;
    transition: all .3s;
}
.member-head .member-head-bg{
  width: 750rpx;
  height: 440rpx;
  position: absolute;
  top: 0;
  left: 0;  
}
.member-head {
  position: relative;
  padding-top: 166rpx;
}
.member-head-info{
  display: flex;
  flex-direction: column;
  text-align: center;
  position: relative;
  z-index: 1;
}
.member-head-info .level-text{
  line-height: normal;
  color: #F6D876;
  font-size: 64rpx;
  font-weight: 500;
}
.member-head-info .expiry{
  font-size: 28rpx;
  color: #F6D876;
  margin-bottom: 34rpx;
}
.member-head-info .img .img-src{
  width: 170rpx;
  height: 196rpx;
}
.member-breadth{
  width: 704rpx;
  margin: 0 auto;
}
.member-title{
  display: flex;
  width: 704rpx;
  margin: 0 auto 24rpx;
  align-items: center;
}
.member-title .main{
  font-size: 40rpx;
  color: #2B2424;
  font-weight: 500;
  margin-right: 16rpx;
  line-height: normal;
}
.member-title .vice{
  font-size: 28rpx;
  color: #2B2424;
  line-height: normal;
}
.right-box{
  border-radius: 8rpx;
  background-color: #fff;
  padding: 48rpx 24rpx;
  box-sizing: border-box;
  margin-bottom: 56rpx;
}
.right-info .img{
  width: 654rpx;
  height: 104rpx;
}

.right-info {
  position: relative;
}
.right-info .right-info-absolute{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
  height: 104rpx;
  padding: 0 34rpx 0 142rpx;
  box-sizing: border-box;
}
.right-info .level{
  font-size: 30rpx;
  position: relative;
  z-index: 1;
  color: #262529;
}
.right-info .discount{
  font-size: 36rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
  color: #262529;
}
.speed-of-progress{
  display: flex;
  /* width: 612rpx; */
  margin: 22rpx auto 37rpx;
}
.speed-of-progress .level-text{
  position: relative;
  display: flex;
}
.speed-of-progress .level .total{
  position: absolute;
  bottom: -46rpx;
  left: 0;
  font-size: 28rpx;
  color: #545357;
  width: 100%;
  text-align: center;
  white-space: nowrap;
}
.speed-of-progress .level .img-src{
  width: 64rpx;
  height: 76rpx;
}
.speed-of-progress .speed{
  width: 128rpx;
  height: 4rpx;
  position: relative;
  margin-top: 36rpx;
}
.speed-of-progress .speed .total-line{
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.speed-of-progress .speed .current{
  height: 100%;
  background-color: #CECDD1;
  position: absolute;
  top: 0;
  left: 0;
}
.level{
  display: flex;
}
.rule-box .info{
  font-size: 32rpx;
  color: #262529;
  font-weight: 400;
}
.rule-box .info .red{
  color:#F64C47;
}
.tabel{
  width:654rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.tabel .tr,.tabel .th{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.tabel .td{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  height: 112rpx;
  line-height: 112rpx;
}
.tabel .th .td{
  color: #2B2424;
  font-weight: 500;
  background: #F6D876;
}
.tabel .tr .td{
  color: #262529;
  font-weight: 400;
}
.tabel .tr:nth-child(2) .td{
  background: #FFF9EC;
}
.tabel .tr:nth-child(3) .td{
  background: #FFF5E0;
}
.tabel .tr:nth-child(4) .td{
  background: #FFF1D6;
}
.tabel .tr:nth-child(5) .td{
  background: #FFEECC;
}
.grade-box .info{
  font-size: 28rpx;
  color: #5B5454;
  margin-bottom: 32rpx;
}
.dark.navbar-container{
  background-color: #fff;
}
.dark.navbar-container .navbar-title{
  color: #342F27;
}