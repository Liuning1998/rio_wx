/* try_product/pages/products/index/index.wxss */
page {
  background: #f7f7f7;
}

.empty-container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-container image {
  margin-top: 120rpx;
  width: 252rpx;
  height: 252rpx;
}

.empty-container text {
  font-size: 28rpx;
  color: #666666;
  margin-top: 60rpx;
}

.page-container {
  padding-bottom: 100rpx;
}

.banner-image {
  width: 750rpx;
  height: 364rpx;
}

.activity-header {
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 60rpx 0;
  font-size: 32rpx;
  color: #333333;
}

.activity-header text {
  position: relative;
  z-index: 4;
}

.activity-header .header-icon {
  width: 132rpx;
  height: 28rpx;
  position: absolute;
  left: 309rpx;
  bottom: 42rpx;
  z-index: 3;
}

.prodcut-item {
  display: flex;
  flex-direction: column;
  background: #ffffff;
  padding: 24rpx;
  box-sizing: border-box;
  margin: auto;
  width: 702rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.prodcut-item:last-child {
  margin-bottom: 0;
}

.prodcut-item .item-header {
  display: flex;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #333333;
  align-items: center;
}

.prodcut-item .item-header .state {
  color: #333333;
  font-weight: 500;
}

.prodcut-item .item-header .left-time {
  color: #666666;
  margin-left: 8rpx;
}

.prodcut-item .item-header .left-border {
  padding-left: 8rpx;
  border-left: 1px solid #666666;
  height: 24rpx;
  line-height: 24rpx;
}

.prodcut-item .item-header .time {
  font-weight: 600;
  color: #333333;
  margin-left: 8rpx;
}

.prodcut-item .avatar-container {
  width: 224rpx;
  height: 224rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.prodcut-item .avatar {
  width: 224rpx;
  height: 224rpx;
  display: flex;
}

.prodcut-item .item-content {
  display: flex;
  margin-top: 26rpx;
}

.prodcut-item .info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.prodcut-item .name {
  font-size: 28rpx;
  line-height: 36rpx;
  margin-top: 8rpx;
  font-weight: 600;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
}

.prodcut-item .desc {
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-sizing: border-box;
}

.prodcut-item .price-and-btn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.prodcut-item .price-and-btn .go-join {
  background-image: linear-gradient(139deg, #EEDEB0 0%, #D3B27E 100%);
  height: 50rpx;
  width: 132rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

.prodcut-item .price-and-btn .joining {
  height: 50rpx;
  line-height: 50rpx;
  width: 132rpx;
  text-align: center;
  border-radius: 25rpx;
  border: 1px solid #C58513;
  box-sizing: border-box;
  font-size: 24rpx;
  color: rgba(197,133,19,0.69);
  font-weight: 600;
}

.prodcut-item .price-and-btn .disabled {
  background: #AAAAAA;
  height: 50rpx;
  width: 132rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

.prodcut-item .price-and-btn .joined {
  background-image: linear-gradient(-49deg, #EF5450 0%, #FF8A80 100%);
  height: 50rpx;
  width: 132rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

.prodcut-item .price {
  font-size: 44rpx;
  font-weight: 600;
  color: #CE343C;
}

.prodcut-item .price::before {
  content: 'ï¿¥';
  color: #CE343C;
  font-size: 24rpx;
  font-weight: 400;
}

.prodcut-item .price-ecimal {
  font-size: 24rpx;
  color: #CE343C;
}

.prodcut-item .origin-price {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}