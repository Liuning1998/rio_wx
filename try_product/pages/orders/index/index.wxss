/* pages/orders/index/index.wxss */
page {
  background: #f7f7f7;
}

.page-container {
  height: 100%;
  /* flex: 1; */
  overflow-y: scroll;
}

.page-content {
  padding-bottom: 80rpx;
}

.page-content.iphone-x {
  padding-bottom: 120rpx;
}

/* tab-header */
.tab-header {
  width: 750rpx;
  font-size: 30rpx;
  color: #666666;
  position: fixed;
  display: flex;
  justify-content: space-around;
  left: 0;
  top: 0;
  z-index: 999;
  background: #ffffff;
}

.tab-header .tab-item {
  height: 85rpx;
  line-height: 85rpx;
  box-sizing: border-box;
  
  /* border-bottom: 3rpx solid rgba(0, 0, 0, 0); */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.tab-header .tab-item text {
  padding: 0 4rpx;
  margin: 0 10rpx;
}

.tab-header .tab-item .border{
  width: 100%;
  height: 4rpx;
  background: rgba(0, 0, 0, 0);
  display: flex;
  flex-shrink: 0;
}

.tab-header .tab-item.active {
  color: #333333;
}

.tab-header .tab-item.active .border{
  /* border-bottom: 3rpx solid #e23c42; */
  background: linear-gradient(to left, rgba(244, 115, 68, 0.43), #ED3448);
}
/* tab-header */

/* 订单列表 */
.orders-container {
  margin-top: 12rpx;
}

.order-item-container {
  background: #ffffff;
  width: 702rpx;
  margin: 10rpx 24rpx 0 24rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  border-radius: 8rpx;
}

.order-status {
  position: relative;
  font-size: 24rpx;
  color: #ce343c;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  /* min-height: 50rpx; */
}

.order-status .name-container {
  color: #333333;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.order-status .name-container image {
  height: 34rpx;
  width: 34rpx;
  position: initial;
  margin-right: 10rpx;
}

.order-status.completed {
  color: #666666;
}

.order-status image {
  height: 80rpx;
  position: absolute;
  right: 0rpx;
  top: 0;
  z-index: 9;
}

.products {
  width: 100%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.products .product-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.products .product-item .avatar {
  height: 160rpx;
  width: 160rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.products .product-item .total-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.products .product-item .total-container .total {
  font-size: 32rpx;
  color: #333333;
}

.products .product-item .total-container .quantity {
  font-size: 24rpx;
  color: #999999;
}

