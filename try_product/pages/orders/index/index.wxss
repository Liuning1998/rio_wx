.products .product-item .price {
  font-size: 32rpx;
  color: #333333;
  text-align: right;
  flex-shrink: 0;
}

.products .product-item .product-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  margin-right: 40rpx;
}

.products .product-item .go-detail {
  height: 20rpx;
  width: 10rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.total-info {
  display: flex;
  justify-content: flex-end;
  color: #666666;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.total-info .total {
  margin-left: 8rpx;
}

.total-info .price {
  color: #e23c42;
  margin: 0 2rpx;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  /* padding: 20rpx 0; */
}

.delete-btn, .cancel-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid #999999;
  border-radius: 30rpx;
  color: #999999;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.buy-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid #98733D;
  border-radius: 30rpx;
  color: #98733D;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
}

.waiting-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(197,133,19,0.69);
  border-radius: 30rpx;
  color: rgba(197,133,19,0.69);
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.disabled-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid rgba(197,133,19,0.69); */
  background: #aaaaaa;
  border-radius: 30rpx;
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.status-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid rgba(197,133,19,0.69); */
  background-image: linear-gradient(-44deg, #EF5450 0%, #FF8A80 100%);
  border-radius: 30rpx;
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.status-btn.new {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid rgba(197,133,19,0.69); */
  background: #ffffff;
  border-radius: 30rpx;
  color: #C58513;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 1px solid #C58513;
}

.status-btn.fail {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid rgba(197,133,19,0.69); */
  background: #AAAAAA;
  border-radius: 30rpx;
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.pay-btn {
  height: 60rpx;
  width: 180rpx;
  box-sizing: border-box;
  /* border: 1rpx solid #ce343c; */
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  background: linear-gradient(to right, #D3B27E, #EEDEB0, #D3B27E);
  color: #8E662F;
}

.delete image {
  height: 24rpx;
  margin: 10rpx 30rpx;
  margin-left: 0;
  display: flex;
  align-items: center;
}
