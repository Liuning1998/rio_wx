/* orders/pages/service/index.wxss */

page {
  background: #f7f7f7;
}

.products{
  width: 750rpx;
  margin: 12rpx auto;
  background: #FFFFFF;
  border: 1rpx solid #EEEBE8;
}
.title{
  display: flex;
  height: 132rpx;
  justify-content: space-between;
  width: 702rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #E6E6E6;
  align-items: center;
}
.title:last-child{
  border-bottom: none;
}
.title .name{
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #332B2B;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 200rpx;
}
.title .right{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #332B2B;
  display: flex;
  align-items: center;
  text-align: right;
  flex: 1;
  justify-content: flex-end;
}
.title .right.active{
  color: #332B2B;
}
.title .right .input{
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #332B2B;
}
.input-placeholder{
  font-family: PingFangSC-Regular;
  font-weight: normal;
  color: #807474;
}
.textarea-placeholder{
  font-family: PingFangSC-Regular;
  font-weight: normal;
  color: #807474;
}
.title .right image{
  width: 16rpx;
  height: 28rpx;
  margin-left: 18rpx;
}
.products .title{
  border-bottom: none;
}
.products-box{
  width: 702rpx;
  position: relative;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin: 0 auto 24rpx;
}
.products-box .icon{
  position: absolute;
  width: 0;
  height: 0;
  border-top: 24rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: 24rpx solid #F5F5F5;
  top: -48rpx;
  left: 72rpx;
}
.products-box .content{
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
  padding: 48rpx 0;
  border-bottom: 1rpx solid #E6E6E6;
}
.products-box .content .avatar{
  margin-right: 12rpx;
  width: 192rpx;
  height: 192rpx;
  border: 1rpx solid #E6E6E6;
  border-radius: 12rpx;
  flex: none;
}

/* 单个商品 s */
.products-box .one-content{
  width: 100%;
  padding: 48rpx 0;
  border-bottom: 1rpx solid #E6E6E6;
  display: flex;
  justify-content: space-between;
}
.products-box .one-content .one-avatar{
  height: 192rpx;
}
.products-box .one-content .one-avatar image{
  width: 192rpx;
  height: 192rpx;
  border: 1rpx solid #E6E6E6;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.products-box .one-content .one-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.products-box .one-content .one-info .name{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.products-box .one-content .one-info .price{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.products-box .one-content .one-info .price::before{
  content: "¥";
  margin-right: 4rpx;
}
/* 单个商品 e */

.products-box .info{
  height: 114rpx;
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
} 
.products-box .info .quantity{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  flex: 1;
}
.products-box .info .money {
  display: flex;
  align-items: center;
}
.products-box .info .money .price::before{
  content: "¥";
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #FF3633;
}
.products-box .info .money .price{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FF3633;
}
.products-box .info .money .express{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #332B2B;
  position: relative;
  top: 2rpx;
}

.type{
  background-color: #fff;
  margin: 12rpx auto;
  border: 1rpx solid #EEEBE8;
}
.describe{
  margin: 12rpx 0;
  background-color: #fff;
}
.describe .describe-box{
  width: 702rpx;
  margin: 0 auto;
}
.describe .describe-box .description{
  width: 100%;
  height: 280rpx;
  border-radius: 8rpx;
  padding: 28rpx 0;
  box-sizing: border-box;
  font-size: 40rpx;
  color: #332B2B;
  font-family: PingFangSC-Medium;
  text-align: justify;
}
.placeholder{
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #807474;
}
.describe .describe-box .words-quantity {
  position: absolute;
  z-index: 1;
  bottom: 38rpx;
  right: 32rpx;
  font-size: 40rpx;
  color: #807474;
  font-family: PingFangSC-Regular;
}
.agreement{
  margin: 12rpx auto;
  background-color: #fff;
}
.agreement .title .name{
  width: auto;
}
.view-placeholder{
  width: 100%;
  height: 200rpx;
}

.btn-box.submit{
  width: 100%;
  padding: 14rpx 0;
  display: flex;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 0 2rpx 0 #E5E5E5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.btn-box.submit .btn.disabled{
  background: #aaaaaa;
  color: #ffffff;
}
.btn-box.submit.iphone-x{
  padding-bottom: 82rpx;
}
.btn-box .btn{
  width: 702rpx;
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(123deg, #FF511E 0%, #FC1000 100%);
  border-radius: 36rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #FFFFFF;
}
/* 弹窗 */
.service-popup{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99991;
}
.service-popup .mask{
  position: absolute;
  top: 0;
  height: 0;
  background-color: rgba(0,0,0,.4);
  width: 100%;
  height: 100%;
}
.service-popup .popup{
  width: 100%;
  height: 802rpx;
  background-color: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.service-popup .popup .title{
  height: 112rpx;
  width: 702rpx;
  margin: 0 auto;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #332B2B;
  border-bottom: 1rpx solid #E6E6E6;
}
.service-popup .popup .title .close{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.service-popup .popup .title .close image{
  width: 28rpx;
  height: 28rpx;
}
.service-popup .popup .popup-content{
  width: 702rpx;
  margin: 0 auto;
  flex: 1;
  padding: 36rpx 0;
  overflow-y: auto;
}
.service-popup .popup .popup-content .item{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  border-radius: 12rpx;
  color: #332B2B;
  box-sizing: border-box;
}
.service-popup .popup .popup-content .item.selected{
  background: #FFF0F0;
  border: 1px solid #FFD7D6;
  color: #FF3633;
}
.service-popup .popup .btn-box{
  background: #FFFFFF;
  box-shadow: 0 0 2rpx 0 #E5E5E5;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 14rpx 0;
}
.service-popup .popup .btn-box .btn{
  background-image: linear-gradient(123deg, #FF511E 0%, #FC1000 100%);
  border-radius: 36rpx;
  width: 702rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #FFFFFF;
}

.service-popup .popup .btn-box.iphone-x{
  padding-bottom: 82rpx;
}