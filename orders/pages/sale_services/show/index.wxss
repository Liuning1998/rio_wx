/* orders/pages/sale_services/show/index.wxss */
page {
  background: #f7f7f7;
}

.state-remark {
  font-size: 24rpx;
  color: #666666;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  width: 750rpx;
  text-align: center;
}

.state-container {
  width: 100%;
  background: linear-gradient(to right, rgb(254, 96, 76), rgb(253, 117, 82));
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.state-container .state-desc {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #ffffff;
}

.state-container .state-list {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.state-container .state-list .state-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.state-container .state-list .state-item:first-child {
  align-items: flex-start;
}

.state-container .state-list .state-item:last-child {
  align-items: flex-end;
}

.state-container .state-list .state-item .icon {
  width: 100%;
  display: flex;
  align-items: center;
}

.state-container .state-list .state-item .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgb(254, 96, 76);
  flex-shrink: 0;
  border: 5rpx solid #ffffff;
  box-sizing: border-box;
}

.state-container .state-list .state-item.active .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ffffff;
  flex-shrink: 0;
  border: 5rpx solid #ffffff;
  box-sizing: border-box;
}

.state-container .state-list .state-item .label {
  font-size: 24rpx;
  color: #ffffff;
  margin-top: 12rpx;
}

.state-container .state-list .split {
  flex: 1;
  height: 2rpx;
  background: #ffffff;
}


.body-container {
  width: 750rpx;
  position: relative;
  z-index: 2;
  top: -40rpx;
  display: flex;
  flex-direction: column;
}

.product-container {
  margin-left: 24rpx;
  width: 702rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.product-container .avatar-container {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.product-container .avatar-container image {
  height: 140rpx;
  width: 140rpx;
  display: flex;
}

.product-container .label {
  font-size: 32rpx;
  color: #2B2424;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
}

.product-container .product-content {
  display: flex;
}

.product-container .product-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.product-container .product-info .name {
  font-size: 28rpx;
  line-height: 36rpx;
  color: #2B2424;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
}

.product-container .product-info .quantity {
  font-size: 24rpx;
  color: #666666;
}

.product-container .product-info .quantity .content {
  color: #2B2424;
  font-size: 26rpx;
}

.sale-service-container {
  margin-left: 24rpx;
  width: 702rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}

.sale-service-container .info-item {
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.sale-service-container .info-item .label {
  width: 140rpx;
  text-align: left;
  display: inline-block;
  font-size: 24rpx;
  color: #666666;
  flex-shrink: 0;
}

.sale-service-container .info-item .desc {
  font-size: 24rpx;
  color: #2B2424;
}