/* orders/pages/service/index.wxss */

page {
  background: #f7f7f7;
}

.btn-box.submit{
  width: 100%;
  padding: 14rpx 0;
  display: flex;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 0 2rpx 0 #E5E5E5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.btn-box.submit .btn.disabled{
  background: #aaaaaa;
  color: #ffffff;
}
.btn-box.submit.iphone-x{
  padding-bottom: 82rpx;
}
.btn-box .btn{
  width: 702rpx;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(123deg, #FF511E 0%, #FC1000 100%);
  border-radius: 54rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #FFFFFF;
}

.products{
  width: 750rpx;
  background: #FFFFFF;
  border: 1rpx solid #EEEBE8;
  margin: 8rpx 0 200rpx;
}
.products .title{
  height: 110rpx;
  width: 702rpx;
  margin: 0 auto 28rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  display: flex;
}
.select-box{
  height: 100%;
  display: flex;
  align-items: center;
}
.select{
  margin-right: 24rpx;
  box-sizing: border-box;
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border-radius: 50%;
  border: 2rpx solid #999999;
  flex: none;
}
.select image{
  width: 100%;
  height: 100%;
  display: none;
}
.select.selected{
  border: none;
}
.select.selected image{
  display: block;
}
.products .title .number{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
  height: 100%;
  border-bottom: 1rpx solid #E5E5E5;
  flex: 1;
  display: flex;
  align-items: center;
}
.product{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 702rpx;
  margin: 0 auto 28rpx;
}
.product .avatar{
  display: flex;
}
.product .avatar image{
  width: 192rpx;
  height: 192rpx;
  margin-right: 24rpx;
}
.product .info{
  height: 192rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product .info .name{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #332B2B;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
}
.product .info .bottom{
  display: flex;
  justify-content: space-between;
}
.product .info .bottom .price{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
}
.product .info .bottom .quantity{
  width: 224rpx;
  height: 64rpx;
  background: #F5F5F5;
  border-radius: 32rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 18rpx;
  align-items: center;
  box-sizing: border-box;
}
.product .info .bottom .quantity .btn{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  width: 50rpx;
  color: #332B2B;
  text-align: center;
}
.product .info .bottom .quantity .btn.disabled{
  color: #d0d0d0;
}
.product .info .bottom .quantity .number{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #332B2B;
  text-align: center;
  flex: 1;
}