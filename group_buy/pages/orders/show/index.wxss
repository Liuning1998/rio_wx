.bottom-btn-group {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  z-index: 9;
  box-shadow: 0 9px 28px -8px rgba(0,0,0,0.50);
}
.bottom-btn-group.iphone-x {
  padding-bottom: 68rpx;
}
.bottom-btn-group .btn-content {
  height: 100rpx;
  width: 750rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #ffffff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bottom-btn-group .delete {
  height: 28rpx;
  width: auto;
}
.bottom-btn-group .btn.buy, .bottom-btn-group .btn.pay{
  display: inline-block;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 180rpx;
  background: linear-gradient(to right, #D3B27E, #EEDEB0, #D3B27E);
  color: #8E662F;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
}

.bottom-btn-group .btn.cancel, .bottom-btn-group .btn.delete{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 60rpx;
  line-height: 58rpx;
  width: 208rpx;
  /* background: #e23c42; */
  color: #666666;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid #666666;
}

.bottom-btn-group .btn.cancel {
  margin-left: 20rpx;
}

.bottom-btn-group .btn:active {
  opacity: 0.75;
}

.goto-coupons {
  height: 38rpx;
  line-height: 34rpx;
  border-radius: 19rpx;
  width: 136rpx;
  text-align: center;
  display: inline-block;
  color: #C0780A;
  border: 2rpx solid #C0780A;
  box-sizing: border-box;
}

.address-info {
  border-top: 1px solid #f7f7f7;
  padding-top: 24rpx;
  display: flex;
  flex-direction: column;
}

.address-info .user-info {
  font-size: 24rpx;
  color: #333333;
}

.address-info .user-phone {
  color: #999999;
  margin-left: 8rpx;
}

.address-info .address-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}