/* 活动已结束 */
.close-layer {
  position: absolute;
  z-index: 990;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-layer .close-container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 248rpx;
  height: 248rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  font-size: 40rpx;
  color: #ffffff;
  margin-top: -32rpx;
}

.end-notice {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
  display: inline-block;
  width: 100%;
  text-align: center;
  font-weight: 500;
}
